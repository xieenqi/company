<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_body"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg">

    <include layout="@layout/include_item_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="@dimen/layout_row_margin_top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                style="@style/view_split" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_h_title"
                android:background="@color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_sign_time"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_other_view"
                    style="@style/image_label"
                    android:src="@drawable/img_workreport_type" />

                <TextView
                    android:layout_width="60dp"
                    style="@style/text_item1"
                    android:layout_height="fill_parent"
                    android:text="类型" />

                <RadioGroup
                    android:id="@+id/rg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/view_h_title"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:button="@null"
                        android:drawableLeft="@drawable/cb_bg_selector_checked2"
                        android:background="@android:color/transparent"
                        android:text="日报"
                        android:textColor="@color/text1"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/rb2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:button="@null"
                        android:drawableLeft="@drawable/cb_bg_selector_checked2"
                        android:background="@android:color/transparent"
                        android:text="周报"
                        android:textColor="@color/text1"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/rb3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:button="@null"
                        android:drawableLeft="@drawable/cb_bg_selector_checked2"
                        android:background="@android:color/transparent"
                        android:text="月报"
                        android:textColor="@color/text1"
                        android:textSize="15sp" />

                </RadioGroup>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:layout_marginRight="@dimen/margin_side_edge"
                style="@style/view_split" />

            <LinearLayout
                android:id="@+id/layout_time"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_height="@dimen/view_h_title">

                <ImageView
                    android:id="@+id/img_sign_customer"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_other_view"
                    style="@style/image_label"
                    android:src="@drawable/img_sign_time" />

                <TextView
                    android:layout_width="80dp"
                    style="@style/text_item1"
                    android:layout_height="fill_parent"
                    android:text="时间" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    style="@style/text_item2"
                    android:text="" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:scaleType="center"
                    android:src="@drawable/right_arrow" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:layout_marginRight="@dimen/margin_side_edge"
                style="@style/view_split" />

            <LinearLayout
                android:id="@+id/layout_reviewer"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:layout_height="@dimen/view_h_title">

                <ImageView
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_other_view"
                    style="@style/image_label"
                    android:src="@drawable/img_sign_creator" />

                <TextView
                    android:id="@+id/tv_reviewer_label"
                    android:layout_width="80dp"
                    style="@style/text_item1"
                    android:layout_height="fill_parent"
                    android:text="点评人" />

                <TextView
                    android:id="@+id/tv_reviewer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/text_item2"
                    android:gravity="right|center_vertical"
                    android:layout_height="match_parent"
                    android:text="" />

                <ImageView
                    android:id="@+id/img_title_right_reviewer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/right_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:layout_marginRight="@dimen/margin_side_edge"
                style="@style/view_split" />

            <LinearLayout
                android:id="@+id/layout_toUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="@dimen/view_h_title">

                <ImageView
                    android:id="@+id/img_sign_tousers"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_other_view"
                    style="@style/image_label"
                    android:src="@drawable/img_sign_tousers" />

                <TextView
                    android:layout_width="80dp"
                    style="@style/text_item1"
                    android:layout_height="fill_parent"
                    android:text="抄送人" />

                <TextView
                    android:id="@+id/tv_toUser"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/view_h_title"
                    android:singleLine="false"
                    android:textSize="16sp"
                    android:gravity="right|center_vertical" />

                <LinearLayout
                    android:id="@+id/layout_del"
                    android:visibility="gone"
                    android:gravity="right|center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/img_del"
                        android:layout_gravity="center_vertical|right" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_title_toUser"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/right_arrow" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                style="@style/view_split" />

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/activity_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    style="@style/view_split" />

                <EditText
                    android:background="@color/white"
                    android:id="@+id/edt_content"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:minHeight="100dp"
                    android:gravity="left|top"
                    android:padding="10dp"
                    android:hint="请输入内容"
                    style="@style/edtText_normal" />

                <View
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    style="@style/view_split" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout><!-- From: file:/Users/ykb/Desktop/MyProject/android_360loyo/loyocloud-android-2.0/app/src/main/res/layout/activity_workreports_edit.xml -->