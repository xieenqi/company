<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/activity_bg"
              android:orientation="vertical">

    <include layout="@layout/include_common_title1"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                style="@style/view_split"
                android:layout_width="match_parent"/>

            <LinearLayout
                android:id="@+id/layout_products"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_h_title"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:text="选择产品"/>

                <TextView
                    android:id="@+id/tv_products"
                    style="@style/text_item1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="#4db1fe"/>

                <ImageView
                    android:id="@+id/img_title_right_products"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:scaleType="center"
                    android:src="@drawable/right_arrow"/>

            </LinearLayout>

            <View
                style="@style/view_split"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:layout_marginRight="@dimen/margin_side_edge"/>

            <LinearLayout
                android:id="@+id/layout_salestages"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_h_title"
                android:background="@drawable/layout_bg1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:text="选择阶段"/>

                <TextView
                    android:id="@+id/tv_salestages"
                    style="@style/text_item1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="#4db1fe"/>

                <ImageView
                    android:id="@+id/img_title_right_salestages"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:scaleType="center"
                    android:src="@drawable/right_arrow"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_bg1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone">
                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_side_edge"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_side_edge"
                        android:text="输单原因"/>

                    <TextView
                        android:id="@+id/tv_reason"
                        style="@style/text_item1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="请选择输单原因"
                        android:textColor="#999999"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:scaleType="center"
                        android:src="@drawable/right_arrow"/>

                </LinearLayout>
                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/text_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/view_h_title"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_weight="1"
                    android:text="预估"
                    android:textColor="#999999"/>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"/>

                <LinearLayout
                    android:id="@+id/layout_num"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_label_num"
                        style="@style/text_item2"
                        android:layout_width="80dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/margin_side_edge"
                        android:gravity="left|center_vertical"
                        android:text="数量"
                        android:textColor="#999999"/>

                    <EditText
                        android:id="@+id/edt_num"
                        style="@style/text_item1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="right|center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingRight="@dimen/margin_side_edge"/>

                </LinearLayout>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_side_edge"/>

                <LinearLayout
                    android:id="@+id/layout_price"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_label_price"
                        style="@style/text_item2"
                        android:layout_width="80dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/margin_side_edge"
                        android:gravity="left|center_vertical"
                        android:text="单价"
                        android:textColor="#999999"/>

                    <EditText
                        android:id="@+id/edt_price"
                        style="@style/text_item1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="right|center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingRight="@dimen/margin_side_edge"/>

                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/view_split"
                android:layout_width="match_parent"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/text_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/view_h_title"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_weight="1"
                    android:text="实际"
                    android:textColor="#999999"/>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"/>

                <LinearLayout
                    android:id="@+id/layout_actualNum"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_label_actualNum"
                        style="@style/text_item2"
                        android:layout_width="80dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/margin_side_edge"
                        android:gravity="left|center_vertical"
                        android:text="数量"
                        android:textColor="#999999"/>

                    <EditText
                        android:id="@+id/edt_actualNum"
                        style="@style/text_item1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="right|center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingRight="@dimen/margin_side_edge"/>

                </LinearLayout>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_side_edge"/>

                <LinearLayout
                    android:id="@+id/layout_actualPrice"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_label_actualPrice"
                        style="@style/text_item2"
                        android:layout_width="80dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/margin_side_edge"
                        android:gravity="left|center_vertical"
                        android:text="单价"
                        android:textColor="#999999"/>

                    <EditText
                        android:id="@+id/edt_actualPrice"
                        style="@style/text_item1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="right|center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingRight="@dimen/margin_side_edge"/>

                </LinearLayout>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"/>


                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_side_edge"/>

                <EditText
                    android:id="@+id/edt_demand_memo"
                    style="@style/edtText_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="请输入备注..."
                    android:minHeight="@dimen/dimen_80"/>


                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout><!-- From: file:/Users/ykb/Desktop/MyProject/android_360loyo/loyocloud-android-2.0/app/src/main/res/layout/activity_demands_add.xml -->