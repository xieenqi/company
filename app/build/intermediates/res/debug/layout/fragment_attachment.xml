<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">


    <com.loyo.oa.v2.tool.customview.swipelistview.SwipeListView
        android:layout_above="@+id/layout_upload"
        android:id="@+id/listView_attachment"
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="#00000000"
        swipe:swipeActionLeft="reveal"
        swipe:swipeActionRight="reveal"
        swipe:swipeAnimationTime="200"
        swipe:swipeBackView="@+id/back"
        swipe:swipeCloseAllItemsWhenMoveList="true"
        swipe:swipeFrontView="@+id/front"
        swipe:swipeMode="left"
        swipe:swipeOffsetLeft="240dp"
        swipe:swipeOffsetRight="0dp"
        swipe:swipeOpenOnLongPress="false"/>




    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_h_title"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/icon_common_add"
            android:gravity="center"
            android:text="添加文件"
            android:textColor="@color/title_bg1"/>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/ykb/Desktop/MyProject/android_360loyo/loyocloud-android-2.0/app/src/main/res/layout/fragment_attachment.xml -->