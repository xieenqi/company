<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <CheckBox
        android:visibility="gone"
        android:id="@+id/cb"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        style="@style/checkbox1"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false" />

    <TextView
        android:id="@+id/tv_title"
        android:textSize="18sp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/margin_side_edge"
        android:gravity="center_vertical"
        android:layout_height="50dp" />

    <ImageView
        android:id="@+id/img_title_right_reviewer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:scaleType="center"
        android:src="@drawable/right_arrow" />

</LinearLayout><!-- From: file:/Users/loyo_dev1/Desktop/workspace/android%20Project/develop-bug-fix2/app/src/main/res/layout/item_listview_department.xml -->