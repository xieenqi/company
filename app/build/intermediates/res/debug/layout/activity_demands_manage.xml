<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/activity_bg"
              android:orientation="vertical">

    <include layout="@layout/include_common_title"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">
        <com.loyo.oa.v2.tool.customview.pullToRefresh.PullToRefreshListView
            android:clickable="false"
            android:layout_above="@+id/layout_add"
            android:id="@+id/listView_demands"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@color/activity_split"
            android:dividerHeight="0.5dp"
            android:drawSelectorOnTop="true"
            android:listSelector="#00000000"/>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/layout_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:background="@color/whitesmoke">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_h_title"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/icon_common_add"
                android:gravity="center"
                android:text="新增购买意向"
                android:textColor="@color/title_bg1"/>
        </RelativeLayout>

    </RelativeLayout>

