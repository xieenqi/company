<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical">

    <CheckBox
        android:id="@+id/cb"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/margin_side_edge"
        style="@style/checkbox2"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/margin_side_edge"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/tv_title"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="" />

        <TextView
            android:id="@+id/tv_content"
            android:textSize="14sp"
            android:textColor="#9f9f9f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_side_edge"
            android:text="" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/ykb/Desktop/MyProject/android_360loyo/loyocloud-android-2.0/app/src/main/res/layout/item_usergroup_child.xml -->