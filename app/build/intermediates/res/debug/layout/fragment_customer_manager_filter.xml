<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="150dp"
    android:background="@color/white"
    android:id="@+id/layout_body">

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_task_filter_users"
            android:layout_marginLeft="10dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/img_task_filter_users"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_content_label"
            android:text="按相关人员"
            android:textColor="@color/title_bg1"
            android:layout_toRightOf="@+id/img_task_filter_users"
            android:layout_marginLeft="9dp"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        style="@style/view_split" />

    <ListView
        android:id="@+id/lv_subordinates"
        android:background="@color/white"
        android:divider="@color/activity_split"
        android:dividerHeight="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout><!-- From: file:/Users/loyo_dev1/Desktop/workspace/android%20Project/develop-bug-fix2/app/src/main/res/layout/fragment_customer_manager_filter.xml -->