<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="150dp"
    android:background="@color/white"
    android:id="@+id/layout_body">

    <RelativeLayout
        android:background="@color/title_bg1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title">

        <Button
            android:id="@+id/btn_task_filter_confirm"
            android:background="@color/title_bg1"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="确定" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_task_filter_class"
                    android:layout_marginLeft="10dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/img_task_filter_class"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_content_label"
                    android:text="按类别"
                    android:textColor="@color/title_bg1"
                    android:layout_toRightOf="@+id/img_task_filter_class"
                    android:layout_marginLeft="9dp"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_type1"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    style="@style/view_split" />

                <CheckBox
                    android:id="@+id/cb1"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    style="@style/checkbox2" />

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:textColor="@color/text1"
                    android:textSize="@dimen/textsize_content_label"
                    android:paddingLeft="10dp"
                    android:text="提交给我的" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_type2"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    style="@style/view_split" />

                <CheckBox
                    android:id="@+id/cb2"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    style="@style/checkbox2" />

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:textColor="@color/text1"
                    android:textSize="@dimen/textsize_content_label"
                    android:paddingLeft="10dp"
                    android:text="我提交的" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_type3"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    style="@style/view_split" />

                <CheckBox
                    android:id="@+id/cb3"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    style="@style/checkbox2" />

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:textColor="@color/text1"
                    android:textSize="@dimen/textsize_content_label"
                    android:paddingLeft="10dp"
                    android:text="与我相关的" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                style="@style/view_split" />

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_task_filter_status"
                    android:layout_marginLeft="10dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/img_task_filter_status"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_content_label"
                    android:text="按状态"
                    android:textColor="@color/title_bg1"
                    android:layout_toRightOf="@+id/img_task_filter_status"
                    android:layout_marginLeft="9dp"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/layout_status1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    style="@style/view_split" />

                <CheckBox
                    android:id="@+id/cb4"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    style="@style/checkbox2" />

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:textColor="@color/text1"
                    android:textSize="@dimen/textsize_content_label"
                    android:paddingLeft="10dp"
                    android:text="待点评" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_status2"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    style="@style/view_split" />

                <CheckBox
                    android:id="@+id/cb5"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="false"
                    style="@style/checkbox2" />

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:textColor="@color/text1"
                    android:textSize="@dimen/textsize_content_label"
                    android:paddingLeft="10dp"
                    android:text="已点评" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                style="@style/view_split" />

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_task_filter_users"
                    android:layout_marginLeft="10dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/img_task_filter_users"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize_content_label"
                    android:text="按相关人员"
                    android:textColor="@color/title_bg1"
                    android:layout_toRightOf="@+id/img_task_filter_users"
                    android:layout_marginLeft="9dp"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                style="@style/view_split" />

            <ListView
                android:id="@+id/lv_subordinates"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:divider="@color/activity_split"
                android:dividerHeight="0.5dp"
                android:layout_height="wrap_content"></ListView>

        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/Users/loyo_dev1/Desktop/workspace/android%20Project/develop-bug-fix2/app/src/main/res/layout/fragment_workreport_manager_filter.xml -->