<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.loyo.oa.v2.tool.customview.pullToRefresh.PullToRefreshListView
            android:background="@color/white"
            android:paddingBottom="@dimen/dimen_8"
            android:layout_above="@+id/layout_discuss_action"
            android:id="@+id/lv_discussion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"/>

        <LinearLayout
            android:background="@color/activity_bg"
            android:id="@+id/layout_discuss_action"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:minHeight="@dimen/dimen_55"
            android:layout_height="wrap_content">

            <EditText
                android:paddingLeft="@dimen/dimen_16"
                android:id="@+id/et_comment"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:singleLine="false"
                android:maxLines="8"
                android:textSize="15sp"
                android:background="@color/whitesmoke"
                android:hint="发表评论"
                android:layout_height="match_parent" />

            <View
                android:layout_gravity="center_vertical"
                android:layout_height="40dp"
                android:background="@color/activity_split"
                android:layout_width="0.5dp" />

            <TextView
                android:background="@color/whitesmoke"
                android:id="@+id/tv_send"
                android:text="发送"
                android:textColor="@color/title_bg1"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="70dp"
                android:layout_height="match_parent" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
