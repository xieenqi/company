<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/front"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="84dp">

        <ImageView
            android:id="@+id/img_attachment"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:scaleType="centerCrop"
            android:layout_width="70dp"
            android:layout_height="78dp"/>

        <TextView
            android:id="@+id/tv_title"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:textColor="#262626"
            android:layout_toRightOf="@+id/img_attachment"/>

        <TextView
            android:id="@+id/tv_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:textSize="13sp"
            android:textColor="#555555"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/img_attachment"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:id="@+id/back"
        android:layout_gravity="right"
        android:layout_width="120dp"
        android:layout_height="84dp">

        <RelativeLayout
            android:id="@+id/layout_action_update"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="#bcbcbc">

            <ImageView
                android:id="@+id/update"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                android:src="@drawable/update1"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@+id/layout_action_update"
            android:id="@+id/layout_action_delete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="#ef4646">

            <ImageView
                android:id="@+id/delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                android:src="@drawable/delete1"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/ykb/Desktop/MyProject/android_360loyo/loyocloud-android-2.0/app/src/main/res/layout/item_swipelistview.xml -->