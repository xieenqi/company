<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:padding="15dp"
    android:background="@drawable/img_bg_home_textview">

    <TextView
        android:id="@+id/tv_time"
        android:textSize="14sp"
        android:textColor="#848484"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sf" />

    <TextView
        android:id="@+id/tv_content"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:textColor="#4B4B4B"
        android:layout_width="wrap_content"
        android:minHeight="24dp"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:text="反馈:" />

    <View
        android:id="@+id/view_dashed_line"
        android:layerType="software"
        android:background="@drawable/view_dashed_line"
        android:padding="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="3dp" />

    <TextView
        android:id="@+id/tv_reply"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:textColor="#4B4B4B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="24dp"
        android:singleLine="false"
        android:text="回复:暂无回复!" />

</LinearLayout><!-- From: file:/Users/loyo_dev1/Desktop/workspace/android%20Project/develop-bug-fix2/app/src/main/res/layout/item_listview_feedback.xml -->