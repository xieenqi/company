<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg1"
        android:orientation="vertical">

        <include layout="@layout/include_common_title_2"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_65"
                android:background="@color/white"
                android:orientation="horizontal">

                <com.loyo.oa.v2.tool.customview.RoundImageView
                    android:id="@+id/iv_avartar"
                    android:layout_width="@dimen/dimen_65"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_contact_avatar"
                    imagecontrol:border_inside_color="#a8d4e9"
                    imagecontrol:border_outside_color="#a8d4e9"
                    imagecontrol:border_thickness="1dp"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:gravity="center"
                    android:text="方静"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_role"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:gravity="center"
                    android:text="研发部 测试"
                    android:textColor="#999999"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:minHeight="@dimen/dimen_45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_attendance_rusult"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_type"
                    android:layout_gravity="center_vertical"
                    android:layout_width="@dimen/dimen_25"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_16"
                    />

                <TextView
                    android:textColor="@color/gray"
                    android:layout_gravity="center_vertical"
                    android:singleLine="false"
                    android:gravity="left|center"
                    android:id="@+id/tv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_25"
                    android:text="迟到了,打卡时间"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_25"
                android:layout_marginTop="@dimen/dimen_8"
                android:drawableLeft="@drawable/icon_attendance_explanation"
                android:text="说明"
                />

            <View
                style="@style/view_split"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:layout_marginTop="@dimen/dimen_10"
                />

            <TextView
                android:textSize="16sp"
                android:text="迟到原因"
                android:minHeight="@dimen/dimen_55"
                android:gravity="left|center"
                android:textColor="#999999"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_15"
                android:id="@+id/tv_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <GridView
                android:id="@+id/gridView_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:horizontalSpacing="@dimen/activity_horizontal_margin"
                android:listSelector="@android:color/transparent"
                android:numColumns="3"
                android:verticalSpacing="@dimen/activity_horizontal_margin"/>

            <Button
                android:visibility="gone"
                android:id="@+id/btn_confirm"
                android:textColor="@color/white"
                android:layout_margin="@dimen/dimen_16"
                android:background="@drawable/round_bg_shpe"
                android:text="确认外勤"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
