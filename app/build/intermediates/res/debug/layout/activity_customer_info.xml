<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/activity_bg"
              android:orientation="vertical">

    <include layout="@layout/include_common_title1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_other_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"/>

                <EditText
                    android:id="@+id/tv_customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center"
                    android:hint="客户名称"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColorHint="#c9c9c9"
                    android:textSize="15sp"/>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_side_edge"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/tv_address"
                        style="@style/edtText_normal"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:hint="地址"
                        android:singleLine="false"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_refresh_address"
                            android:layout_width="@dimen/dimen_25"
                            android:layout_height="@dimen/dimen_25"
                            android:layout_marginLeft="@dimen/margin_side_edge"
                            android:layout_marginRight="@dimen/margin_side_edge"
                            android:src="@drawable/icon_refresh"/>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/dimen_15"
                            android:layout_marginTop="@dimen/dimen_15"
                            android:background="@color/activity_split"
                            />

                        <ImageView
                            android:id="@+id/img_go_where"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_5"
                            android:src="@drawable/icon_go_where"/>

                    </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_side_edge"/>

                <EditText
                    android:id="@+id/edt_customer_memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:background="@null"
                    android:hint="客户简介"
                    android:minHeight="@dimen/dimen_70"
                    android:textSize="15sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_customer_extra_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_first_margin_top"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone"
                >

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_customer_industry"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_h_title"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_item1"
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:text="行业"/>

                <TextView
                    android:id="@+id/tv_industry"
                    style="@style/text_item2"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/title_bg1"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:scaleType="center"
                    android:src="@drawable/right_arrow"/>

            </LinearLayout>

            <View
                style="@style/view_split"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:layout_marginRight="@dimen/margin_side_edge"/>

            <LinearLayout
                android:id="@+id/layout_customer_district"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_h_title"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_item1"
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:text="地区"/>

                <TextView
                    android:id="@+id/tv_district"
                    style="@style/text_item2"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/title_bg1"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:scaleType="center"
                    android:src="@drawable/right_arrow"/>
            </LinearLayout>

            <View
                style="@style/view_split"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:layout_marginRight="@dimen/margin_side_edge"/>

            <LinearLayout
                android:id="@+id/layout_customer_label"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_h_title"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_item1"
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:text="标签"/>

                <TextView
                    android:id="@+id/tv_labels"
                    style="@style/text_item2"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/title_bg1"
                    />

                <ImageView
                    android:id="@+id/img_title_right_toUser"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:scaleType="center"
                    android:src="@drawable/right_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_Extra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_first_margin_top"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/layout_customer_responser"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_item1"
                        android:layout_width="80dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:text="负责人"/>

                    <TextView
                        android:id="@+id/tv_customer_responser"
                        style="@style/text_item2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:hint=""/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:scaleType="center"
                        android:src="@drawable/right_arrow"/>
                </LinearLayout>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_side_edge"/>

                <LinearLayout
                    android:id="@+id/layout_customer_join_users"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_item1"
                        android:layout_width="80dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:text="参与人"/>

                    <TextView
                        android:id="@+id/tv_customer_join_users"
                        style="@style/text_item2"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:hint=""/>

                    <ImageView
                        android:id="@+id/img_del_join_users"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dimen_8"
                        android:scaleType="center"
                        android:src="@drawable/img_delete"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_first_margin_top"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_customer_creator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_item1"
                        android:layout_width="80dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:text="创建人"/>

                    <TextView
                        android:layout_marginRight="@dimen/dimen_16"
                        android:textColor="#999999"
                        android:id="@+id/tv_customer_creator"
                        style="@style/text_item2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center"
                        android:paddingLeft="20dp"
                        android:text=""/>

                </LinearLayout>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_side_edge"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_item1"
                        android:layout_width="80dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:text="创建时间"/>

                    <TextView
                        android:layout_marginRight="@dimen/dimen_16"
                        android:textColor="#999999"
                        android:id="@+id/tv_customer_create_at"
                        style="@style/text_item2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center"
                        android:paddingLeft="20dp"
                        android:text=""/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/Users/loyo_dev1/Desktop/workspace/android%20Project/develop-bug-fix2/app/src/main/res/layout/activity_customer_info.xml -->