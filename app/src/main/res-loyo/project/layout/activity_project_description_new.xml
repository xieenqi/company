<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_activity_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_activity_con_bg"
            android:orientation="vertical"
            android:paddingBottom="@dimen/common_layout_padding"
            android:paddingTop="@dimen/common_layout_padding">

            <TextView
                android:id="@+id/tv_title"
                style="@style/common_text_line_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_layout_padding"
                android:singleLine="false"
                android:paddingRight="@dimen/common_layout_padding"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_extra"
                style="@style/common_text_line_third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="@dimen/common_layout_padding"
                android:paddingLeft="@dimen/common_layout_padding"
                android:paddingRight="@dimen/common_layout_padding" />

            <include layout="@layout/common_include_line_in_space" />

            <TextView
                android:id="@+id/tv_content"
                android:singleLine="false"
                style="@style/common_text_line_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:minHeight="180dp"
                android:paddingLeft="@dimen/common_layout_padding"
                android:paddingRight="@dimen/common_layout_padding"
                android:paddingTop="@dimen/common_text_in_space" />

            <include layout="@layout/common_include_line_out_space" />

            <LinearLayout
                android:id="@+id/layout_managers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_layout_padding"
                android:paddingRight="@dimen/common_layout_padding"

                android:paddingTop="@dimen/common_layout_padding">

                <TextView
                    style="@style/common_text_line_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="负责人: " />

                <TextView
                    android:id="@+id/tv_managers"
                    style="@style/common_text_line_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_text_in_space"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_layout_padding"
                android:paddingRight="@dimen/common_layout_padding">

                <TextView
                    style="@style/common_text_line_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参与人: " />

                <TextView
                    android:id="@+id/tv_members"
                    style="@style/common_text_line_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>