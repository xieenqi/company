<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/activity_bg">
    <include layout="@layout/include_common_title1" />
    <LinearLayout
        android:id="@+id/ll_restimate"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estimate_page_string1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_sp13" />

                <TextView
                    android:id="@+id/tv_dealprice"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/margin_other_view"
                    android:paddingRight="@dimen/margin_other_view"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="￥0"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_rate_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已回款 | 回款率0.00%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_sp13" />

                <TextView
                    android:id="@+id/tv_totalprice"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/margin_other_view"
                    android:paddingRight="@dimen/margin_other_view"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="￥0"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_20"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estimate_page_string2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_sp13" />

                <TextView
                    android:id="@+id/tv_aleryprice"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/margin_other_view"
                    android:paddingRight="@dimen/margin_other_view"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="￥0"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estimate_page_string3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_sp13" />

                <TextView
                    android:id="@+id/tv_faileprice"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"

                    android:paddingTop="@dimen/margin_other_view"
                    android:paddingRight="@dimen/margin_other_view"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="100%"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>