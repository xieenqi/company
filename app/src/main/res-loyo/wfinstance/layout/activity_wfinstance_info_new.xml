<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wfinstance_activity_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <include layout="@layout/include_common_title_edit" />
        <com.library.module.widget.loading.LoadingLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                                                         android:id="@+id/ll_loading"
                                                         android:layout_width="match_parent"
                                                         android:layout_height="match_parent"
                                                         app:isFirstVisible="true">
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/wfinstance_activity_con_bg"
                    android:orientation="vertical">
                    <include layout="@layout/include_wfinstance_line_space"/>
                    <RelativeLayout
                        android:paddingLeft="@dimen/wfinstance_layout_padding"
                        android:paddingTop="@dimen/wfinstance_layout_padding"
                        android:paddingBottom="@dimen/wfinstance_layout_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:id="@+id/layout_creator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/tv_title_creator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxEms="50"
                                android:singleLine="true"
                                android:text="测试"
                                android:textSize="16sp"
                                style="@style/wfinstance_line_text_main"/>
                            <!--这个控件不知道显示什么的,保留,避免出错-->
                            <TextView
                                android:id="@+id/tv_title_role"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                style="@style/wfinstance_line_text_main"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:textColor="#fff"
                                android:text="待审批"
                                android:background="@drawable/common_lable_blue"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_time_creator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/layout_creator"
                            android:layout_marginTop="15dp"
                            android:text="测试测试"
                            style="@style/wfinstance_line_text_other_2" />

                    </RelativeLayout>

                    <include layout="@layout/include_solid_line_left" />

                    <LinearLayout
                        android:id="@+id/ll_sale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/text_item1"
                                android:layout_width="80dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/margin_side_edge"
                                android:text="销售机会"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_sale"
                                style="@style/text_item1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="right|center_vertical"
                                android:textColor="@color/title_bg1"
                                android:textColorHint="@color/text99"
                                android:textSize="15sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="5dp"
                                android:scaleType="center"
                                android:src="@drawable/right_arrow" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_wfinstance_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/wfinstance_layout_padding"
                        android:layout_marginRight="@dimen/wfinstance_layout_padding"
                        android:animateLayoutChanges="true"
                        android:visibility="gone"
                        android:paddingBottom="@dimen/wfinstance_layout_padding"
                        android:orientation="vertical">

                    </LinearLayout>
                    <!-- 订单审批-->
                    <LinearLayout
                        android:id="@+id/ll_order_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <TextView
                            style="@style/wfinstance_line_text_second_title"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/wfinstance_common_second_height"
                            android:background="@color/wfinstance_activity_bg"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/wfinstance_layout_padding"
                            android:text="订单信息" />

                        <LinearLayout
                            android:id="@+id/ll_order_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="false"
                            android:orientation="vertical"
                            android:paddingRight="@dimen/wfinstance_layout_padding"
                            android:paddingBottom="@dimen/wfinstance_layout_padding"
                            android:paddingLeft="@dimen/wfinstance_layout_padding"/>

                        <include layout="@layout/include_wfinstance_line_outspace" />

                        <LinearLayout
                            android:id="@+id/ll_product"
                            android:layout_width="match_parent"
                            android:paddingLeft="@dimen/wfinstance_layout_padding"
                            android:paddingRight="@dimen/wfinstance_layout_padding"
                            android:layout_height="@dimen/wfinstance_line_height"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/wfinstance_line_text_main"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="购买产品"
                                />
                            <TextView
                                android:id="@+id/tv_product"
                                style="@style/wfinstance_line_text_other_3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="right|center_vertical"
                                android:hint="" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/wfinstance_common_arrow_margin_left"
                                android:scaleType="center"
                                android:src="@drawable/wfinstance_right_arrow" />

                        </LinearLayout>

                        <include layout="@layout/include_solid_line_left" />

                        <LinearLayout
                            android:id="@+id/ll_plan"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/wfinstance_line_height"
                            android:gravity="center_vertical"
                            android:paddingRight="@dimen/wfinstance_layout_padding"
                            android:paddingLeft="@dimen/wfinstance_layout_padding"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_plan"
                                style="@style/wfinstance_line_text_main"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="回款" />

                            <TextView
                                android:id="@+id/tv_plan_value"
                                style="@style/wfinstance_line_text_other_3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="right|center_vertical"
                                android:hint="" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/wfinstance_common_arrow_margin_left"
                                android:scaleType="center"
                                android:src="@drawable/wfinstance_right_arrow" />

                        </LinearLayout>
                    </LinearLayout>
                    <!-- 回款审批-->
                    <LinearLayout
                        android:id="@+id/ll_payment_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/wfinstance_common_second_height"
                            android:background="@color/wfinstance_activity_bg"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/wfinstance_layout_padding"
                            android:text="回款信息"
                            style="@style/wfinstance_line_text_second_title"
                            />

                        <LinearLayout
                            android:id="@+id/ll_payment_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/wfinstance_layout_padding"
                            android:padding="@dimen/wfinstance_layout_padding"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_memo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/wfinstance_layout_padding"
                        android:paddingBottom="@dimen/wfinstance_layout_padding"
                        android:background="@color/wfinstance_activity_con_bg"
                        android:orientation="vertical">
                        <include layout="@layout/include_wfinstance_line_space"/>
                        <LinearLayout
                            android:layout_marginTop="@dimen/wfinstance_layout_padding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_height="match_parent"
                                android:layout_width="wrap_content"
                                android:scaleType="centerInside"
                                android:src="@drawable/icon_attendance_explanation_new" />

                            <TextView
                                android:layout_marginLeft="10dp"
                                style="@style/wfinstance_line_text_other_3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                android:text="备注内容" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_memo"
                            style="@style/wfinstance_line_text_other_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_marginTop="@dimen/wfinstance_text_line_space"
                            android:textIsSelectable="true"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_AttachFile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wfinstance_line_height"
                        android:paddingLeft="@dimen/wfinstance_layout_padding"
                        android:paddingBottom="@dimen/wfinstance_layout_padding"
                        android:background="@color/wfinstance_activity_con_bg"
                        android:orientation="vertical">
                        <include layout="@layout/include_wfinstance_line_space" />
                        <LinearLayout
                            android:paddingTop="@dimen/wfinstance_layout_padding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_attachment_count"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical"
                                style="@style/wfinstance_line_text_main"
                                android:text="附件 (0)"
                                />

                            <ImageView
                                android:paddingRight="@dimen/wfinstance_layout_padding"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/wfinstance_common_arrow_margin_left"
                                android:scaleType="center"
                                android:src="@drawable/wfinstance_right_arrow" />
                        </LinearLayout>
                    </LinearLayout>

                    <include layout="@layout/include_solid_line_left" />

                    <LinearLayout
                        android:id="@+id/ll_project"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wfinstance_line_height"
                        android:paddingLeft="@dimen/wfinstance_layout_padding"
                        android:paddingRight="@dimen/wfinstance_layout_padding"
                        android:background="@color/wfinstance_activity_con_bg"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:text="所属项目"
                            style="@style/wfinstance_line_text_main"
                            />

                        <TextView
                            android:id="@+id/tv_projectName"
                            style="@style/wfinstance_line_text_other_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:maxLength="20"
                            android:singleLine="true"/>
                    </LinearLayout>
                    <include layout="@layout/include_solid_line_left" />

                    <LinearLayout
                        android:id="@+id/ll_customer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wfinstance_line_height"
                        android:paddingLeft="@dimen/wfinstance_layout_padding"
                        android:paddingRight="@dimen/wfinstance_layout_padding"
                        android:background="@color/wfinstance_activity_con_bg"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:text="所属客户"
                            style="@style/wfinstance_line_text_main"
                            />

                        <TextView
                            android:id="@+id/tv_customerName"
                            style="@style/wfinstance_line_text_other_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:maxLength="20"
                            android:singleLine="true"/>
                    </LinearLayout>
                </LinearLayout>
                <include layout="@layout/include_wfinstance_line_outspace"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/wfinstance_layout_padding"
                    android:background="@color/wfinstance_activity_con_bg"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wfinstance_line_height"
                        android:paddingRight="@dimen/wfinstance_layout_padding"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="left|center_vertical"
                            android:text="审批流程"
                            style="@style/wfinstance_line_text_main" />

                        <TextView
                            android:id="@+id/tv_wfnodes_title"
                            style="@style/wfinstance_line_text_main"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_4"
                            android:gravity="left|center_vertical"
                            android:text="(0/0)"
                            android:textColor="@color/text33" />
                    </LinearLayout>

                    <include layout="@layout/include_wfinstance_line_space"/>

                    <com.loyo.oa.v2.customview.ListView_inScrollView
                        android:id="@+id/listView_workflowNodes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:background="@color/white"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0dp"
                        android:paddingRight="@dimen/wfinstance_layout_padding"
                        android:listSelector="@android:color/transparent" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        </com.library.module.widget.loading.LoadingLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/layout_bg1"
        android:orientation="vertical"
        android:visibility="gone">
        <include layout="@layout/include_wfinstance_line_space"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_pass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    style="@style/image_label"
                    android:gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@drawable/img_wfinstance_agree_new" />

                <TextView
                    style="@style/text_title"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="同意"
                    android:textColor="#34D434" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:background="@color/lineCC" />

            <LinearLayout
                android:id="@+id/layout_nopass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    style="@style/image_label"
                    android:gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@drawable/img_wfinstance_notagree_new" />

                <TextView
                    style="@style/text_title"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="驳回"
                    android:textColor="@color/text99" />

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/view_split"
            android:layout_width="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_lastwork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_other_view"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_lastowrk"
            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_h_title"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/icon_wfinstance_lastwork"
            android:gravity="center"
            android:text=" 办 结 "
            android:textColor="#38a5af" />

    </LinearLayout>
</LinearLayout>
