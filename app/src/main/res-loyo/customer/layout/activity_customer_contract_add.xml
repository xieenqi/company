<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_common_title1" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/activity_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_name_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_other_view"
                    android:gravity="center_vertical"
                    android:minWidth="80dp"
                    android:text="姓名"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/et_name"
                        style="@style/text_item1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/img_right_arrow"
                        android:background="@null"
                        android:gravity="center_vertical|left"
                        android:hint="必填"
                        android:maxLength="24"
                        android:paddingLeft="14dp"
                        android:singleLine="true"
                        android:textColor="@color/suodesilei" />

                    <ImageView
                        android:id="@+id/img_maillist_contact"
                        android:layout_marginRight="@dimen/dimen_5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:src="@drawable/icon_contactlist_lind"
                        />
                </RelativeLayout>

            </LinearLayout>

            <include layout="@layout/include_solid_line_left" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_phone_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_other_view"
                        android:gravity="center_vertical"
                        android:minWidth="80dp"
                        android:text="手机"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/edt_contract_tel1"
                            style="@style/text_item1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/iv_phone_insert1"
                            android:background="@null"
                            android:gravity="center_vertical|left"
                            android:hint="限数字,如13912345678"
                            android:maxLength="24"
                            android:paddingLeft="14dp"
                            android:singleLine="true"
                            android:textColor="@color/suodesilei"
                            android:numeric="integer"
                            />

                        <ImageView
                            android:id="@+id/iv_phone_insert1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dimen_5"
                            android:gravity="center_vertical"
                            android:src="@drawable/icon_contact_insert" />
                    </RelativeLayout>
                </LinearLayout>
                <include layout="@layout/include_solid_line_left" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_phone_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_phone_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_other_view"
                        android:gravity="center_vertical"
                        android:minWidth="80dp"
                        android:text="手机"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/edt_contract_tel2"
                            style="@style/text_item1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/iv_phone_insert2"
                            android:background="@null"
                            android:gravity="center_vertical|left"
                            android:hint="限数字,如13912345678"
                            android:maxLength="24"
                            android:paddingLeft="14dp"
                            android:singleLine="true"
                            android:textColor="@color/suodesilei"
                            android:numeric="integer"
                            />

                        <ImageView
                            android:id="@+id/iv_phone_insert2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dimen_5"
                            android:gravity="center_vertical"
                            android:src="@drawable/icon_contact_insert" />
                    </RelativeLayout>
                </LinearLayout>
                <include layout="@layout/include_solid_line_left" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_phone_layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_phone_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_other_view"
                        android:gravity="center_vertical"
                        android:minWidth="80dp"
                        android:text="手机"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/edt_contract_tel3"
                            style="@style/text_item1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/iv_phone_insert3"
                            android:background="@null"
                            android:gravity="center_vertical|left"
                            android:hint="限数字,如13912345678"
                            android:maxLength="24"
                            android:paddingLeft="14dp"
                            android:singleLine="true"
                            android:textColor="@color/suodesilei"
                            android:numeric="integer"
                            />

                        <ImageView
                            android:id="@+id/iv_phone_insert3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dimen_5"
                            android:gravity="center_vertical"
                            android:src="@drawable/icon_contact_insert"
                            android:visibility="invisible"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <include layout="@layout/include_solid_line_left" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_call_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_other_view"
                        android:gravity="center_vertical"
                        android:minWidth="80dp"
                        android:text="座机"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/edt_contract_telnum1"
                            style="@style/text_item1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/iv_call_insert1"
                            android:background="@null"
                            android:gravity="center_vertical|left"
                            android:hint="限数字,如02812345678"
                            android:maxLength="24"
                            android:paddingLeft="14dp"
                            android:singleLine="true"
                            android:textColor="@color/suodesilei"
                            android:numeric="integer"
                            />

                        <ImageView
                            android:id="@+id/iv_call_insert1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dimen_5"
                            android:gravity="center_vertical"
                            android:src="@drawable/icon_contact_insert" />
                    </RelativeLayout>
                </LinearLayout>
                <include layout="@layout/include_solid_line_left" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_call_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_call_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_other_view"
                        android:gravity="center_vertical"
                        android:minWidth="80dp"
                        android:text="座机"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/edt_contract_telnum2"
                            style="@style/text_item1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/iv_call_insert2"
                            android:background="@null"
                            android:gravity="center_vertical|left"
                            android:hint="限数字,如02812345678"
                            android:maxLength="24"
                            android:paddingLeft="14dp"
                            android:singleLine="true"
                            android:textColor="@color/suodesilei"
                            android:numeric="integer"
                            />

                        <ImageView
                            android:id="@+id/iv_call_insert2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dimen_5"
                            android:gravity="center_vertical"
                            android:src="@drawable/icon_contact_insert" />
                    </RelativeLayout>
                </LinearLayout>
                <include layout="@layout/include_solid_line_left" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_call_layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_call_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_other_view"
                        android:gravity="center_vertical"
                        android:minWidth="80dp"
                        android:text="座机"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/edt_contract_telnum3"
                            style="@style/text_item1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/iv_call_insert3"
                            android:background="@null"
                            android:gravity="center_vertical|left"
                            android:hint="限数字,如02812345678"
                            android:maxLength="24"
                            android:paddingLeft="14dp"
                            android:singleLine="true"
                            android:textColor="@color/suodesilei"
                            android:numeric="integer"
                            />

                        <ImageView
                            android:id="@+id/iv_call_insert3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dimen_5"
                            android:gravity="center_vertical"
                            android:src="@drawable/icon_contact_insert"
                            android:visibility="invisible"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <include layout="@layout/include_solid_line_left" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_contact_extra_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

