<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/customer_basic_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/title_bg1"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:singleLine="true"
            android:maxLines="1"/>

        <LinearLayout
            android:id="@+id/customer_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_customer_name"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_customer_state"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:singleLine="true"
                android:maxLines="1"/>

            <ImageView
                android:id="@+id/state_editable"
                android:layout_width="16dp"
                android:layout_height="24dp"
                android:layout_marginLeft="3dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:src="@drawable/icon_editable"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/customer_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customer_state"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_customer_tag"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:singleLine="true"
                android:maxLines="1"/>

            <ImageView
                android:id="@+id/tag_editable"
                android:layout_width="16dp"
                android:layout_height="24dp"
                android:layout_marginLeft="3dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:src="@drawable/icon_editable"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_drop_reason"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_below="@+id/customer_tag"
            android:layout_marginRight="@dimen/dimen_14"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_right_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/img_right_arrow_bold" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_warn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFBE1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_other_view"
            android:layout_marginRight="@dimen/dimen_5"
            android:src="@drawable/icon_warn" />

        <TextView
            android:id="@+id/tv_recycleRemind"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/dimen_14"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="#C7A25D" />
    </LinearLayout>
</LinearLayout>