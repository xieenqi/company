<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical">
    <include layout="@layout/include_search_title"/>

    <LinearLayout
        android:id="@+id/ll_showonly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dimen_45"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_customer_onlyname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="不存在该用户，点击xx,创建该客户"
            android:textColor="@color/text99"
            android:textSize="@dimen/text_sp15"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/lineCC"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@null"
        android:scrollbars="none"
        />
</LinearLayout>