<resources>
    <!-- 防止黑屏的主题
    @style/Theme.AppCompat.Light.NoActionBar  design 包下要用到主题  继承AppCompatActivity
    -->
    <style name="AppStartLoadTranslucent" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar"></style>

    <style name="noTitle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="SelectProductViewAnim">
        <!-- PopupWindow左右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/enter_in_selectproduct</item>
        <item name="android:windowExitAnimation">@anim/enter_out_selectproduct</item>
    </style>

    <!--FragmentActivity的样式，目前主要是用到ActionBar的地方-->
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="FragmentActivityTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#FF666666</item>
    </style>
    <!--FragmentActivity的样式，目前主要是用到ActionBar的地方-->


    <style name="fullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="dialog_get_img_StyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="dialog_edit_delete_StyleBottom" parent="android:Theme.Holo.DialogWhenLarge">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/black30</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="NoTitleDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--CheckBox style-->
    <style name="checkbox1" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/cb_bg_checked</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:width">30dp</item>
        <item name="android:height">30dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="checkbox2" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/cb_bg_selector_checked2</item>
    </style>

    <!--text style-->
    <style name="text_title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_sp18</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_title2">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textsize_content_label</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_item1">
        <item name="android:textSize">@dimen/text_sp15</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColorHint">@color/text99</item>
        <item name="android:textColor">@color/text33</item>
    </style>

    <style name="text_item2">
        <item name="android:textSize">@dimen/text_sp15</item>
        <item name="android:textColor">@color/text33</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    <!--主页-->
    <style name="text_main_number">
        <item name="android:textColor">#fef7f8</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/main_number_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- 星形控件 -->
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>

    <style name="Transparent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/halftransparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>


    <style name="edtText_add_order">
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_sp15</item>
        <item name="android:textColorHint">@color/text99</item>
        <item name="android:textColor">@color/text33</item>
    </style>

    <!--以下是新版本定义的样式-->
    <style name="edtText_normal">
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_sp15</item>
        <item name="android:textColorHint">@color/text99</item>
        <item name="android:textColor">@color/text33</item>
    </style>

    <style name="textView_hint">
        <item name="android:textColor">#c9c9c9</item>
        <item name="android:textSize">@dimen/textsize_content1</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="view_split">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/lineCC</item>
    </style>

    <style name="image_label">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/enter_zoom_out</item>
        <item name="android:windowExitAnimation">@anim/enter_zoom_in</item>
    </style>
    <!-- 自定义loading dialog 加载效果-->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/loading_bj</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.2</item>
    </style>

    <style name="popu_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/popu_bj</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.2</item>
    </style>

    <style name="AlertDalogThem">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowBackground">@null</item>SubtitleSubtitle
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="text_style99">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/text99</item>
        <item name="android:textSize">@dimen/text_sp15</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <!-- 加载进度条-->
    <style name="ProgressBarMini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/shape_progressbar_mini</item>
    </style>

    <style name="ProgressBarMini2" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
    </style>
    <!--列表副标题样式-->
    <style name="subtitle_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text99</item>
        <item name="android:textSize">@dimen/text_sp12</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:background">#f5f5f5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/margin_other_view</item>
    </style>
    <!--去掉 activity上面的阴影-->
    <style name="Theme.IOSched" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 自定义仿IOS的ActionSheet底部Dialog的样式 ，有模糊效果 -->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/contactlist_show</item>
        <item name="android:windowExitAnimation">@anim/contactlist_diss</item>
    </style>

    <declare-styleable name="AnimCheckBox">
        <attr name="stroke_width" format="dimension" />
        <attr name="stroke_color" format="color" />
        <attr name="circle_color" format="color" />
    </declare-styleable>

    <!--透明背景的dialog-->
    <style name="check_photodailog_style" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
