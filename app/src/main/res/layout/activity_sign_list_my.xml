<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/include_common"
        layout="@layout/include_header_title_search_filter"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/layout_list_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/layout_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33000000"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_100"
                android:layout_marginRight="@dimen/dimen_100"
                android:layout_marginTop="2dp"
                android:background="@drawable/popu_bj"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ListView
                    android:id="@+id/lv_signin_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:cacheColorHint="#00000000"
                    android:choiceMode="singleChoice"
                    android:divider="@color/activity_split"
                    android:dividerHeight="@dimen/dimen_0.5"
                    android:paddingLeft="@dimen/dimen_10"
                    android:paddingRight="@dimen/dimen_10"
                    android:paddingTop="@dimen/dimen_10"
                    />
            </LinearLayout>
        </LinearLayout>


    </FrameLayout>

</LinearLayout>