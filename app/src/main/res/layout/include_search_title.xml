<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/view_h_title"
              android:background="@color/title_bg1"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/img_title_left"
        android:layout_width="44dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_other_view"
            android:scaleType="fitCenter"
            android:src="@drawable/back_left1"/>

    </RelativeLayout>

    <View
        android:layout_width="@dimen/dimen_0.5"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="#48a7f0"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/img_search"
                android:drawablePadding="@dimen/dimen_2"
                android:gravity="center_vertical"
                android:hint="请输入搜索关键字"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#66ffffff"
                android:textCursorDrawable="@null"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/iv_clean"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:paddingRight="@dimen/margin_side_edge"
                android:src="@drawable/back_left2"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_5"
            android:layout_marginRight="@dimen/margin_side_edge"
            android:background="#7fffffff"
            />
    </RelativeLayout>
</LinearLayout>
