<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_delete_"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_other_view"
            android:gravity="center_vertical"
            android:text="联系人1"
            android:textColor="@color/text99"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/layout_control"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_side_edge"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_del"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dimen_5"
                android:layout_marginRight="3dp"
                android:gravity="center_vertical"
                android:src="@drawable/img_delete"/>

            <ImageView
                android:id="@+id/img_default"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_20"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dimen_5"
                android:layout_marginRight="3dp"
                android:gravity="center_vertical"
                android:src="@drawable/icon_contact_default_normal"/>

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_20"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dimen_5"
                android:layout_marginRight="3dp"
                android:gravity="center_vertical"
                android:src="@drawable/selector_demand_edit"/>

        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/include_solid_line_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_bg"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/view_h_title"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:gravity="center_vertical"
                android:text="姓        名"
                android:textColor="@color/text33"
                android:textSize="@dimen/text_sp15"/>

            <TextView
                android:id="@+id/tv_name"
                style="@style/edtText_normal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:textColor="#999999"
                />

        </LinearLayout>

        <include layout="@layout/include_solid_line_left"/>

        <LinearLayout
            android:id="@+id/layout_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_h_title"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_phone_label"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:gravity="center_vertical"
                android:text="手        机"
                android:textColor="@color/text33"
                android:textSize="@dimen/text_sp15"/>

            <TextView
                android:id="@+id/tv_phone"
                style="@style/edtText_normal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:textColor="#999999"
                />

            <LinearLayout
                android:id="@+id/layout_action"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_send_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_contacts_send_sms"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_call"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_contacts_call"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/include_solid_line_left"/>

        <LinearLayout
            android:id="@+id/layout_wiretel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_h_title"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wiletel_label"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:gravity="center_vertical"
                android:text="座        机"
                android:textColor="@color/text33"
                android:textSize="@dimen/text_sp15"/>

            <TextView
                android:id="@+id/tv_wiletel"
                style="@style/edtText_normal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:textColor="#999999"
                />

            <LinearLayout
                android:id="@+id/layout_call_wiretel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_contacts_call"/>
            </LinearLayout>

        </LinearLayout>


        <include layout="@layout/include_solid_line_left"/>

        <LinearLayout
            android:id="@+id/layout_depart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_h_title"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:gravity="center_vertical"
                android:text="部门职务"
                android:textColor="@color/text33"
                android:textSize="@dimen/text_sp15"/>

            <TextView
                android:id="@+id/tv_depart"
                style="@style/edtText_normal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:textColor="#999999"
                />

        </LinearLayout>

        <include layout="@layout/include_solid_line_left"/>

        <LinearLayout
            android:id="@+id/layout_qq"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_h_title"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_qq_label"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:gravity="center_vertical"
                android:text="Q Q"
                android:textColor="@color/text33"
                android:textSize="@dimen/text_sp15"/>

            <TextView
                android:id="@+id/tv_qq"
                style="@style/edtText_normal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:textColor="#999999"
                />

        </LinearLayout>

        <include layout="@layout/include_solid_line_left"/>

        <LinearLayout
            android:id="@+id/layout_birthday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_h_title"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_birthday_label"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:gravity="center_vertical"
                android:text="生        日"
                android:textColor="@color/text33"
                android:textSize="@dimen/text_sp15"/>

            <TextView
                android:id="@+id/tv_birthday"
                style="@style/edtText_normal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:textColor="#999999"
                />

        </LinearLayout>


        <include layout="@layout/include_solid_line_left"/>

        <LinearLayout
            android:id="@+id/layout_wx"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_h_title"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_wx_label"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:gravity="center_vertical"
                android:text="微        信"
                android:textColor="@color/text33"
                android:textSize="@dimen/text_sp15"/>

            <TextView
                android:id="@+id/tv_wx"
                style="@style/edtText_normal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:textColor="#999999"
                />

        </LinearLayout>

        <include layout="@layout/include_solid_line_left"/>

        <LinearLayout
            android:id="@+id/layout_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_h_title"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_email_label"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:gravity="center_vertical"
                android:text="邮        箱"
                android:textColor="@color/text33"
                android:textSize="@dimen/text_sp15"/>

            <TextView
                android:id="@+id/tv_email"
                style="@style/edtText_normal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:textColor="#999999"
                />

        </LinearLayout>

        <include layout="@layout/include_solid_line_left"/>

        <LinearLayout
            android:id="@+id/layout_memo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_h_title"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_memo_label"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:gravity="center_vertical"
                android:text="备        注"
                android:textColor="@color/text33"
                android:textSize="@dimen/text_sp15"/>

            <TextView
                android:id="@+id/tv_memo"
                style="@style/edtText_normal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:textColor="#999999"
                />

        </LinearLayout>

        <include layout="@layout/include_solid_line_left"/>
    </LinearLayout>


</LinearLayout>



