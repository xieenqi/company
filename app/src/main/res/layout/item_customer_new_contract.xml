<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="match_parent">

    <View
        android:layout_marginTop="@dimen/view_first_margin_top"
        android:layout_width="match_parent"
        style="@style/view_split" />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/view_h_title">

        <ImageView
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:layout_marginRight="@dimen/margin_side_edge"
            style="@style/image_label"
            android:src="@drawable/img_sign_customer" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="联系人" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            style="@style/edtText_normal"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_side_edge"
        android:layout_marginRight="@dimen/margin_side_edge"
        style="@style/view_split" />

    <LinearLayout
        android:id="@+id/layout_phone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/view_h_title">

        <ImageView
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:layout_marginRight="@dimen/margin_side_edge"
            style="@style/image_label"
            android:src="@drawable/img_customer_tel" />

        <TextView
            android:layout_width="80dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="电话" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            style="@style/edtText_normal"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        style="@style/view_split" />

</LinearLayout>