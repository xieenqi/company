<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_side_edge"
        android:layout_marginRight="@dimen/margin_side_edge"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_viewgroup_wfinstance_nodes"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="@dimen/margin_side_edge"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dimen_45"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_10"
                android:src="@drawable/img_wfinstance_agree_new" />

            <TextView
                android:id="@+id/tv_creator_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:layout_marginTop="@dimen/dimen_15"
                android:ellipsize="end"
                android:maxEms="12"
                android:maxLength="10"
                android:singleLine="true"
                android:text="销售部"
                android:textColor="@color/text33"
                android:textSize="@dimen/text_sp16" />

            <TextView
                android:id="@+id/tv_set_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_toRightOf="@+id/tv_creator_title"
                android:singleLine="true"
                android:text=""
                android:textColor="#9C9C9C"
                android:textSize="@dimen/text_sp12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_overtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/dimen_15"
                android:text=""
                android:textColor="@color/red1"
                android:textSize="@dimen/text_sp14"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:id="@+id/view_dashed_line"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/view_dashed_line"
            android:layerType="software" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="@dimen/margin_side_edge"
            android:minHeight="@dimen/dimen_45"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_marginTop="@dimen/margin_other_view"
                android:text="内容"
                android:textColor="@color/text33"
                android:textSize="@dimen/text_sp16" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_other_view"
                android:text=""
                android:textColor="@color/text99"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>