<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_navigation_close_next"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingRight="@dimen/dimen_4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_other_view"
                    android:gravity="center_vertical"
                    android:minWidth="@dimen/dimen_100"
                    android:text="选择订单"
                    android:textColor="@color/text33"
                    android:textSize="@dimen/text_sp15"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_order"
                        style="@style/text_item1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/img_right_arrow1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="必选,请选择"
                        android:singleLine="false"
                        android:text=""
                        android:textColor="@color/title_bg1"/>

                    <ImageView
                        android:id="@+id/img_right_arrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:src="@drawable/right_arrow"/>
                </RelativeLayout>

            </LinearLayout>

            <include layout="@layout/include_solid_line_left"/>

            <LinearLayout
                android:id="@+id/ll_worksheet_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingRight="@dimen/dimen_4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_other_view"
                    android:gravity="center_vertical"
                    android:minWidth="@dimen/dimen_100"
                    android:text="选择工单类型"
                    android:textColor="@color/text33"
                    android:textSize="@dimen/text_sp15"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_worksheet_type"
                        style="@style/text_item1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/img_right_arrow2"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="必选,请选择"
                        android:singleLine="false"
                        android:text=""
                        android:textColor="@color/title_bg1"/>

                    <ImageView
                        android:id="@+id/img_right_arrow2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:src="@drawable/right_arrow"/>
                </RelativeLayout>

            </LinearLayout>

            <include layout="@layout/include_solid_line_left"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>