<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dimen_60"
        android:orientation="horizontal">

        <com.loyo.oa.v2.customview.RoundImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_below="@+id/tv_discuss_sender"
            android:layout_marginLeft="@dimen/margin_other_view"
            android:src="@drawable/img_default_user"
            />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_marginRight="@dimen/dimen_8"
            android:gravity="center_vertical"
            android:text="name"
            android:textColor="@color/text33"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dimen_30"
        android:layout_marginBottom="@dimen/dimen_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_visitnum"
            android:layout_width="40dp"
            android:layout_marginLeft="@dimen/margin_other_view"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="content"
            android:textColor="@color/text99"
            android:textSize="@dimen/text_sp11"/>


        <TextView
            android:id="@+id/tv_visitcustomers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_marginRight="@dimen/dimen_8"
            android:gravity="center_vertical|left"
            android:text="haha"
            android:textColor="@color/text99"
            android:textSize="@dimen/text_sp11"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/retange_green"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_2"
            android:paddingBottom="@dimen/dimen_2"
            android:paddingLeft="@dimen/dimen_5"
            android:paddingRight="@dimen/dimen_5"
            android:text="已完成"
            android:layout_margin="@dimen/dimen_5"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sp11"
            />


        <TextView
            android:id="@+id/tv_status2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_rect"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_5"
            android:paddingBottom="@dimen/dimen_5"
            android:paddingLeft="@dimen/dimen_5"
            android:paddingRight="@dimen/dimen_5"
            android:layout_margin="@dimen/dimen_5"
            android:text="设置负责人"
            android:textColor="@color/title_bg1"
            android:textSize="@dimen/text_sp15"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_14"
        android:background="@color/activity_bg"/>
</LinearLayout>
