<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/activity_bg"
              android:orientation="vertical">

    <include layout="@layout/include_common_title_edit"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                style="@style/view_split"
                android:layout_width="match_parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/layout_bg1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_side_edge">

                    <EditText
                        android:singleLine="false"
                        android:layout_marginRight="@dimen/dimen_4"
                        android:layout_toLeftOf="@+id/img_workreport_status"
                        android:id="@+id/edt_workReport_title"
                        style="@style/text_item1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="4dp"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:textColor="@color/text1"/>

                    <TextView
                        android:id="@+id/tv_workReport_time"
                        style="@style/textView_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/edt_workReport_title"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="5dp"
                        android:text="2014.12.25 9:00"
                        android:textSize="13sp"/>

                    <ImageView
                        android:id="@+id/img_workreport_status"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_workreport_status1"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_3"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:background="@drawable/view_dashed_line"
                    android:layerType="software"
                    android:padding="@dimen/dimen_15"/>

                <WebView
                    android:id="@+id/webView_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_side_edge"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@android:color/transparent"
                    android:minHeight="80dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_touch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_other_view">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_30"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_item1"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:hint="点评人："
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_reviewer"
                        style="@style/text_item2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/margin_side_edge"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:textColor="#999999"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_item1"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:hint="抄送人："
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_toUser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_side_edge"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:textColor="#999999"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_30"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:hint="所属项目："
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_ptoject"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_side_edge"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:minHeight="@dimen/view_h_title"
                        android:textColor="#999999"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_crm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_10"
                        android:background="@drawable/round_bg_shpe3"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_crm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_16"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:gravity="center_vertical"
                            android:text="工作动态统计"
                            android:textSize="18sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_3"
                            android:layout_margin="@dimen/dimen_10"
                            android:background="@drawable/view_dashed_line"
                            android:layerType="software"/>

                        <com.loyo.oa.v2.common.NoScroolGridView
                            android:id="@+id/info_gridview_workreports"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:numColumns="3"
                            android:listSelector="@android:color/transparent"
                            />

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/no_dysndata_workreports"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/beogray"
                            >

                            <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="60dp"
                                android:background="@drawable/icon_dysn_nodata"
                                />

                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="无法获取数据"
                                android:textColor="@color/gray"
                                />

                            </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dimen_16"
                    />

                <LinearLayout
                    android:id="@+id/layout_discussion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/view_h_title"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_discussion_count"
                        style="@style/text_item1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:layout_weight="1"
                        android:hint="讨论(0)"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/right_arrow"/>

                </LinearLayout>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    />

                <LinearLayout
                    android:id="@+id/layout_attachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/view_h_title"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_attachment_count"
                        style="@style/text_item1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:layout_weight="1"
                        android:hint="附件(0)"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/right_arrow"/>

                </LinearLayout>

                <LinearLayout

                    android:id="@+id/layout_score"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:gravity="center_vertical"
                        android:text="点评"
                        android:textSize="18sp"
                        />

                    <View
                        style="@style/view_split"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_10"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_16"
                        android:background="@drawable/round_bg_shpe3"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/view_h_title"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_reviewer_"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_16"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="点评人：其拜拜"
                                android:textColor="#999999"
                                android:textSize="18sp"
                                />


                            <TextView
                                android:id="@+id/tv_review_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dimen_16"
                                android:layout_weight="1"
                                android:gravity="center_vertical|right"
                                android:text="2015.06.09 13:23"
                                android:textColor="#999999"
                                android:textSize="18sp"
                                />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_3"
                            android:layout_margin="@dimen/dimen_10"
                            android:background="@drawable/view_dashed_line"
                            android:layerType="software"/>

                        <LinearLayout
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_10"
                            android:layout_marginBottom="@dimen/dimen_5"
                            android:id="@+id/layout_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <RatingBar
                                android:id="@+id/ratingBar_workReport"
                                style="@style/roomRatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="29dp"
                                android:layout_marginLeft="@dimen/dimen_8"
                                android:gravity="right|center_vertical"
                                android:isIndicator="true"
                                android:max="100"
                                android:numStars="5"
                                android:stepSize="1"/>

                            <EditText
                                android:id="@+id/edt_content"
                                style="@style/edtText_normal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:editable="false"
                                android:gravity="left|top"
                                android:minHeight="80dp"
                                android:padding="10dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_workreport_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="@dimen/margin_other_view"
                    android:background="@color/title_bg1"
                    android:text="点评"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>