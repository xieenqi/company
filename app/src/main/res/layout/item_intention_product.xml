<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#f4f4ff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_other_view"
        >

        <TextView
            android:id="@+id/tv_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="新增产品"
            android:textColor="@color/text99"
            android:textSize="@dimen/text_sp15"
            />

        <LinearLayout
            android:id="@+id/ll_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_other_view"
            android:paddingRight="@dimen/dimen_5"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_delete"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_5"
            android:paddingRight="@dimen/margin_other_view">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_edit"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:layout_marginRight="@dimen/margin_other_view"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="产        品"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_product"
            style="@style/text_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/title_bg1"
            android:textColorHint="@color/text99"
            android:textSize="15sp"/>

    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:layout_marginRight="@dimen/margin_other_view"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="产品原价"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_toal_price"
            style="@style/text_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/title_bg1"
            android:textColorHint="@color/text99"
            android:textSize="15sp"/>

    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:layout_marginRight="@dimen/margin_other_view"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="销售价格"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_sale_price"
            style="@style/text_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/title_bg1"
            android:textColorHint="@color/text99"
            android:textSize="15sp"/>

    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:layout_marginRight="@dimen/margin_other_view"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="数        量"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_number"
            style="@style/text_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/title_bg1"
            android:textColorHint="@color/text99"
            android:textSize="15sp"/>

    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:layout_marginRight="@dimen/margin_other_view"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="折        扣"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_discount"
            style="@style/text_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/title_bg1"
            android:textColorHint="@color/text99"
            android:textSize="15sp"/>

    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:layout_marginRight="@dimen/margin_other_view"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="总  金  额"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_total_money"
            style="@style/text_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/title_bg1"
            android:textColorHint="@color/text99"
            android:textSize="15sp"/>

    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_other_view"
        android:minHeight="@dimen/view_h_title"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_8"
        android:paddingTop="@dimen/dimen_8"
        >

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="备        注"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text99"
            android:textSize="@dimen/text_sp15"
            />
    </LinearLayout>


</LinearLayout>
