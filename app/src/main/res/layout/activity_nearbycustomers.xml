<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg1"
        android:orientation="vertical">
        <include layout="@layout/include_common_title_2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.loyo.oa.v2.tool.customview.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@android:color/white"
            app:pstsIndicatorColor="@color/title_bg1"
            app:pstsIndicatorHeight="1dp"
            app:pstsShouldExpand="true"
            app:pstsTabPaddingLeftRight="1dp"
            app:pstsUnderlineHeight="0.5dp"/>

        <com.loyo.oa.v2.tool.customview.NoScrollViewpager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tabs">

        </com.loyo.oa.v2.tool.customview.NoScrollViewpager>

    </LinearLayout>
</LinearLayout>
