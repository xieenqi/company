<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="工单标题"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_worksheet_title"
            style="@style/edtText_add_order"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_other_view"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical|right"
            android:maxLength="30"
            android:minHeight="@dimen/dimen_48"
            android:paddingBottom="@dimen/dimen_5"
            android:paddingTop="@dimen/dimen_5"
            android:text="请输入"
            android:textColor="@color/text66"
            android:textSize="15sp" />
    </LinearLayout>

    <include layout="@layout/include_solid_line_left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="工单类型"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_worksheet_kind"
            style="@style/edtText_add_order"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_other_view"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical|right"
            android:maxLength="30"
            android:minHeight="@dimen/dimen_48"
            android:paddingBottom="@dimen/dimen_5"
            android:paddingTop="@dimen/dimen_5"
            android:text="请输入"
            android:textColor="@color/text66"
            android:textSize="15sp" />

    </LinearLayout>

    <include layout="@layout/include_solid_line_left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="备注:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_worksheet_memo"
            style="@style/edtText_add_order"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_other_view"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical|right"
            android:maxLength="30"
            android:minHeight="@dimen/dimen_48"
            android:paddingBottom="@dimen/dimen_5"
            android:paddingTop="@dimen/dimen_5"
            android:text="备注"
            android:textColor="@color/text66"
            android:textSize="15sp" />

    </LinearLayout>

    <include layout="@layout/include_solid_line_left" />

    <LinearLayout
        android:id="@+id/ll_source"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_source"
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="附件"
            android:textSize="15sp" />

        <TextView
            style="@style/text_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:hint=""
            android:textColor="@color/text66"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:scaleType="center"
            android:src="@drawable/right_arrow" />

    </LinearLayout>

    <include layout="@layout/include_solid_line_left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@color/text99"
            android:text="删除" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/lineCC" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@color/text99"
            android:text="编辑" />
    </LinearLayout>

    <include layout="@layout/include_solid_line" />
</LinearLayout>