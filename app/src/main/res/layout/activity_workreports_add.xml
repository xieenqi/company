<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_body"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <include layout="@layout/include_item_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 类型选择-->
            <LinearLayout
                android:id="@+id/layout_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_h_title"
                android:background="@color/white"
                android:gravity="center_vertical">

                <RadioGroup
                    android:id="@+id/rg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/view_h_title"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:drawableLeft="@drawable/cb_bg_selector_checked2"
                        android:text="日报"
                        android:textColor="@color/text1"
                        android:textSize="15sp"/>

                    <RadioButton
                        android:id="@+id/rb2"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:drawableLeft="@drawable/cb_bg_selector_checked2"
                        android:text="周报"
                        android:textColor="@color/text1"
                        android:textSize="15sp"/>

                    <RadioButton
                        android:id="@+id/rb3"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:drawableLeft="@drawable/cb_bg_selector_checked2"
                        android:text="月报"
                        android:textColor="@color/text1"
                        android:textSize="15sp"/>

                </RadioGroup>

            </LinearLayout>
            <!-- 工作统计-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_side_edge"/>

                <LinearLayout
                    android:id="@+id/layout_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_item1"
                        android:layout_width="80dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_16"
                        android:text="时间"/>

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/text_item2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"/>

                    <TextView
                        android:id="@+id/tv_resignin"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:background="@drawable/round_bg_shpe4"
                        android:gravity="center"
                        android:minWidth="@dimen/dimen_40"
                        android:scaleType="center"
                        android:text="补签"
                        android:textColor="@color/title_bg1"/>

                </LinearLayout>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dimen_16"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_h_title"
                        android:layout_marginTop="@dimen/dimen_10">

                        <TextView
                            android:id="@+id/tv_crm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_16"
                            android:gravity="center_vertical"
                            android:text="工作动态统计"
                            android:textSize="18sp"/>

                        <ToggleButton
                            android:id="@+id/crm_toggle"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen_30"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dimen_5"
                            android:layout_marginRight="@dimen/dimen_16"
                            android:background="@drawable/toggle_selector"
                            android:checked="true"
                            android:minWidth="@dimen/dimen_40"
                            android:padding="@dimen/dimen_5"
                            android:textColor="@color/white"
                            android:textOff=""
                            android:textOn=""/>

                    </RelativeLayout>

                    <View
                        style="@style/view_split"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/dimen_16"
                        />

                    <LinearLayout
                        android:id="@+id/layout_crm"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_80"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_new_customers_num"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="#ff5959"
                                android:textSize="28sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="新增客戶"/>

                        </LinearLayout>

                        <View
                            style="@style/view_split"
                            android:layout_width="@dimen/dimen_0.5"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/dimen_10"
                            android:layout_marginTop="@dimen/dimen_10"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_new_visit_num"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="#59b80c"
                                android:textSize="28sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="拜访签到"/>

                        </LinearLayout>

                        <View
                            style="@style/view_split"
                            android:layout_width="@dimen/dimen_0.5"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/dimen_10"
                            android:layout_marginTop="@dimen/dimen_10"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_visit_customers_num"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="#4db1fe"
                                android:textSize="28sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="拜访客戶"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <!-- 附件、内容-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/white"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edt_content"
                    style="@style/edtText_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@color/white"
                    android:gravity="left|top"
                    android:hint="请输入报告内容"
                    android:minHeight="100dp"
                    android:padding="10dp"/>

                <LinearLayout
                    android:id="@+id/layout_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_bg1"
                    android:orientation="vertical">


                    <GridView
                        android:id="@+id/gridView_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:gravity="center"
                        android:horizontalSpacing="@dimen/activity_horizontal_margin"
                        android:listSelector="@android:color/transparent"
                        android:numColumns="3"
                        android:verticalSpacing="@dimen/activity_horizontal_margin"/>

                    <View
                        style="@style/view_split"
                        android:layout_width="match_parent"/>

                </LinearLayout>

            </LinearLayout>
            <!-- 点平人、抄送人、关联项目-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/layout_reviewer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_reviewer_label"
                        style="@style/text_item1"
                        android:layout_width="80dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/margin_side_edge"
                        android:text="点评人"/>

                    <TextView
                        android:id="@+id/tv_reviewer"
                        style="@style/text_item2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/title_bg1"/>

                    <ImageView
                        android:id="@+id/img_title_right_reviewer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/right_arrow"/>
                </LinearLayout>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_side_edge"/>

                <LinearLayout
                    android:id="@+id/layout_toUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/view_h_title"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/text_item1"
                        android:layout_width="80dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/margin_side_edge"
                        android:text="抄送人"/>

                    <TextView
                        android:id="@+id/tv_toUser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:minHeight="@dimen/view_h_title"
                        android:singleLine="false"
                        android:textColor="@color/title_bg1"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:id="@+id/layout_del"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_margin="2dp"
                            android:src="@drawable/img_del"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_title_toUser"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/right_arrow"/>
                </LinearLayout>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_side_edge"/>

                <LinearLayout
                    android:id="@+id/layout_mproject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/view_h_title"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_project_label"
                        style="@style/text_item1"
                        android:layout_width="80dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/margin_side_edge"
                        android:text="所属项目"/>

                    <TextView
                        android:id="@+id/tv_project"
                        android:hint="无"
                        style="@style/text_item2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/title_bg1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/right_arrow"/>
                </LinearLayout>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_side_edge"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>