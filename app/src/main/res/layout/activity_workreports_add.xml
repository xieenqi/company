<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_body"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <include layout="@layout/include_item_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >
            <!-- 类型选择-->
            <LinearLayout
                android:id="@+id/layout_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_h_title"
                android:background="@color/white"
                android:gravity="center_vertical">

                <RadioGroup
                    android:id="@+id/rg"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/view_h_title"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_14">

                    <RadioButton
                        android:id="@+id/rb1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:drawableLeft="@drawable/cb_bg_selector_checked2"
                        android:text="日报"
                        android:textColor="@color/text33"
                        android:textSize="15sp"/>

                    <RadioButton
                        android:id="@+id/rb2"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:drawableLeft="@drawable/cb_bg_selector_checked2"
                        android:text="周报"
                        android:textColor="@color/text33"
                        android:textSize="15sp"/>

                    <RadioButton
                        android:id="@+id/rb3"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:button="@null"
                        android:drawableLeft="@drawable/cb_bg_selector_checked2"
                        android:text="月报"
                        android:textColor="@color/text33"
                        android:textSize="15sp"/>

                </RadioGroup>

            </LinearLayout>
            <!-- 工作统计-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <include layout="@layout/include_solid_line_left"/>

                <LinearLayout
                    android:id="@+id/layout_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_14">

                    <TextView
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:minWidth="@dimen/dimen_80"
                        android:text="时间"/>

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/text_item2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/title_bg1"/>

                    <TextView
                        android:id="@+id/tv_resignin"
                        android:layout_width="34dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:background="@drawable/round_bg_shpe4"
                        android:gravity="center"
                        android:scaleType="center"
                        android:text="补签"
                        android:textColor="@color/title_bg1"
                        android:textSize="11.5sp"/>

                </LinearLayout>

                <include layout="@layout/include_solid_line_left"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_h_title"
                        android:paddingLeft="@dimen/dimen_14"
                        >

                        <TextView
                            android:id="@+id/tv_crm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="工作动态统计"
                            android:textSize="15sp"/>


                        <com.loyo.oa.v2.activity.commonview.SwitchView
                            android:id="@+id/crm_switch"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dimen_5"
                            android:layout_marginRight="@dimen/dimen_14"
                            android:layout_marginTop="6dp"
                            />


                    </RelativeLayout>

                    <include layout="@layout/include_solid_line_left"/>

                    <LinearLayout
                        android:id="@+id/layout_crm"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.loyo.oa.v2.common.NoScroolGridView
                            android:id="@+id/gv_workreports"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:listSelector="@android:color/transparent"
                            android:numColumns="3"
                            android:paddingBottom="@dimen/dimen_10"
                            android:paddingTop="@dimen/dimen_10"
                            />

                        <LinearLayout
                            android:id="@+id/no_dysndata_workreports"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:visibility="gone"
                            >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/icon_dysn_nodata"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="5dp"
                                android:text="暂无统计数据"
                                android:textSize="11.5sp"
                                android:textColor="@color/text99"
                                />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/include_solid_line15"/>
            <!-- 附件、内容-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_14">

                <EditText
                    android:id="@+id/edt_content"
                    style="@style/edtText_normal"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/white"
                    android:gravity="left|top"
                    android:hint="请输入报告内容"
                    android:paddingLeft="0dp"
                    android:paddingRight="@dimen/dimen_14"
                    android:paddingTop="@dimen/dimen_10"
                    android:layout_marginBottom="@dimen/dimen_16"
                    />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/wordcount"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/500"
                        android:textSize="12sp"
                        android:textColor="@color/text99"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_bg1"
                    android:orientation="vertical">

                    <GridView
                        android:id="@+id/gridView_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:gravity="center"
                        android:horizontalSpacing="@dimen/activity_horizontal_margin"
                        android:listSelector="@android:color/transparent"
                        android:numColumns="3"
                        android:verticalSpacing="@dimen/activity_horizontal_margin"/>

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/include_solid_line15"/>
            <!-- 点平人、抄送人、关联项目-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/layout_reviewer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_14">

                    <TextView
                        android:id="@+id/tv_reviewer_label"
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:minWidth="@dimen/dimen_80"
                        android:text="点评人"/>

                    <TextView
                        android:id="@+id/tv_reviewer"
                        style="@style/text_item2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/title_bg1"/>

                    <ImageView
                        android:id="@+id/img_title_right_reviewer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/right_arrow"/>
                </LinearLayout>

                <include layout="@layout/include_solid_line_left"/>

                <LinearLayout
                    android:id="@+id/layout_toUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/view_h_title"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_14">


                    <TextView
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:minWidth="@dimen/dimen_80"
                        android:text="抄送人"/>

                    <TextView
                        android:id="@+id/tv_toUser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:minHeight="@dimen/view_h_title"
                        android:paddingBottom="@dimen/dimen_10"
                        android:paddingTop="@dimen/dimen_10"
                        android:singleLine="false"
                        android:textColor="@color/title_bg1"
                        android:textSize="15sp"/>

                    <LinearLayout
                        android:id="@+id/layout_del"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_margin="2dp"
                            android:src="@drawable/img_del"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_title_toUser"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/right_arrow"/>
                </LinearLayout>

                <include layout="@layout/include_solid_line_left"/>

                <LinearLayout
                    android:id="@+id/layout_mproject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/view_h_title"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_14">

                    <TextView
                        android:id="@+id/tv_project_label"
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:minWidth="@dimen/dimen_80"
                        android:text="所属项目"/>

                    <TextView
                        android:id="@+id/tv_project"
                        style="@style/text_item2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:hint="无"
                        android:textColor="@color/title_bg1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/right_arrow"/>
                </LinearLayout>

                <include layout="@layout/include_solid_line_left"/>

                <include layout="@layout/include_solid_line15"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>