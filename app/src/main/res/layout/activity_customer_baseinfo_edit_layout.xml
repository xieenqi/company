<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <include layout="@layout/include_common_title1"/>

    <LinearLayout
        android:id="@+id/customer_basename_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="客户名称"/>

        <EditText
            android:id="@+id/edt_basename"
            style="@style/edtText_normal"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="输入客户名称"/>
    </LinearLayout>

    <View
        style="@style/view_split"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_side_edge"
        android:layout_marginRight="@dimen/margin_side_edge"/>

    <EditText
        android:id="@+id/edt_customer_basesummary"
        style="@style/edtText_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入企业简介"
        android:minHeight="@dimen/dimen_70"/>

</LinearLayout>
