<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >


    <TextView
        android:id="@+id/tv_index"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/activity_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_other_view"
        android:text="计划"
        android:textColor="@color/text99"
        android:textSize="@dimen/text_sp15"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:layout_marginRight="@dimen/margin_other_view"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="计划回款日期"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_time"
            style="@style/text_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/text66"
            android:textColorHint="@color/text99"
            android:textSize="15sp"/>

    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:layout_marginRight="@dimen/margin_other_view"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="计划回款金额"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_money"
            style="@style/text_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/text66"
            android:textColorHint="@color/text99"
            android:textSize="15sp"/>

    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:layout_marginRight="@dimen/margin_other_view"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_salePrice"
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="回款方式"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_mode"
            style="@style/text_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/text66"
            android:textColorHint="@color/text99"
            android:textSize="15sp"/>

    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:layout_marginRight="@dimen/margin_other_view"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:drawableRight="@drawable/icon_tx3"
            android:minWidth="@dimen/dimen_60"
            android:text="提醒"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_tx"
            style="@style/text_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/text66"
            android:textColorHint="@color/text99"
            android:textSize="15sp"/>

    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:layout_marginRight="@dimen/margin_other_view"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="备注"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_memo"
            style="@style/text_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/text66"
            android:textColorHint="@color/text99"
            android:textSize="15sp"/>

    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:minHeight="@dimen/dimen_50"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/ll_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_delet"
                android:drawablePadding="@dimen/dimen_8"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/text99"
                />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dimen_0.5"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_8"
            android:background="@color/lineCC"
            />

        <LinearLayout
            android:id="@+id/ll_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_edit"
                android:drawablePadding="@dimen/dimen_8"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/text99"
                />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dimen_0.5"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_8"
            android:background="@color/lineCC"
            />

        <LinearLayout
            android:id="@+id/ll_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_add"
                android:drawablePadding="@dimen/dimen_8"
                android:gravity="center"
                android:text="新增回款"
                android:textColor="@color/text99"
                />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>
</LinearLayout>
