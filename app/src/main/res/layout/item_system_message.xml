<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/margin_other_view"
    android:paddingTop="@dimen/dimen_15">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_sys_custom" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingRight="@dimen/margin_other_view">

            <View
                android:id="@+id/view_ack"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dimen_2"
                android:background="@drawable/bg_view_red_circle"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_8"
                android:layout_toRightOf="@+id/view_ack"
                android:text="● 标题bnsirb女生的吧子女随后三部门 ☉ ◉  ● 0n 我金牌客服那边我发那个欺负我评分匹配什么对对对王菲菲我尽快婆婆"
                android:textColor="@color/text33"
                android:textSize="16sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_15"
            android:drawableLeft="@drawable/icon_customer_follow_time"
            android:drawablePadding="5dp"
            android:text="08-25 14:26"
            android:textColor="@color/text99"
            android:textSize="14sp" />

        <include layout="@layout/include_solid_line" />
    </LinearLayout>
</LinearLayout>
