<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_margin="@dimen/dimen_8"
            android:src="@drawable/ic_discuss_task" />

        <View
            android:id="@+id/view_msgpoint"
            android:layout_width="@dimen/dimen_8"
            android:layout_height="@dimen/dimen_8"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="@dimen/dimen_4"
            android:background="@drawable/draw_point_newmsg"></View>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="sss"
                android:gravity="top"
                android:textColor="@color/text_black_1"
                android:textSize="@dimen/text_sp16" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="2016-3-9"
                android:textColor="@color/text_black_2"
                android:textSize="@dimen/text_sp14" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-3-9"
            android:textColor="@color/text_black_3"
            android:textSize="@dimen/text_sp14"
            android:layout_marginTop="@dimen/dimen_4"/>

    </LinearLayout>

</LinearLayout>