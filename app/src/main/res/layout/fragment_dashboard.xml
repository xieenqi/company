<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_other_view"
                android:paddingRight="@dimen/margin_other_view">

                <RadioGroup
                    android:id="@+id/tab_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_customer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dimen_5"
                        android:button="@null"
                        android:checked="true"
                        android:drawableBottom="@drawable/rb_home_sale"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="客户跟进"
                        android:textColor="@drawable/color_text_table2"
                        android:textSize="@dimen/text_sp15" />

                    <RadioButton
                        android:id="@+id/rb_clue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:button="@null"
                        android:drawableBottom="@drawable/rb_home_sale"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="线索跟进"
                        android:textColor="@drawable/color_text_table2"
                        android:textSize="@dimen/text_sp15" />

                </RadioGroup>

                <LinearLayout
                    android:id="@+id/ll_case1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今天"
                        android:textSize="@dimen/text_sp13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:background="@drawable/icon_fauacukum" />
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/include_solid_line_left" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <RelativeLayout
                        android:id="@+id/layout_loaddiv1"
                        android:layout_width="match_parent"
                        android:layout_height="182dp">

                        <LinearLayout
                            android:id="@+id/layout_rest1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:visibility="gone"
                            >
                            <ImageView
                                android:layout_width="@dimen/dimen_44"
                                android:layout_height="@dimen/dimen_45"
                                android:background="@drawable/icon_error_network" />

                            <TextView
                                android:layout_marginTop="@dimen/dimen_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="网络不给力,请稍后再试!"
                                android:textSize="@dimen/text_sp12"
                                android:textColor="@color/text99"
                                />

                            <TextView
                                android:id="@+id/tv_rest1"
                                android:layout_marginTop="@dimen/dimen_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="点击重试"
                                android:textSize="@dimen/text_sp12"
                                android:textColor="@color/title_bg1"
                                />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/layout_load1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/animation_loading"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_followup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >

                        <LinearLayout
                            android:id="@+id/ll_dashboard_followup"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_65"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/margin_other_view"
                                android:background="@drawable/icon_dasignin" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/margin_other_view">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dip"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:text="跟进动态" />

                                    <LinearLayout
                                        android:layout_width="0dip"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="30" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="次数"
                                            android:textColor="@color/diseditable" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dip"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="16" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="客户数"
                                            android:textColor="@color/diseditable" />
                                    </LinearLayout>
                                </LinearLayout>

                                <View
                                    style="@style/view_split"
                                    android:layout_width="match_parent"
                                    android:layout_alignParentBottom="true" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_dashboard_signin"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_65"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/margin_other_view"
                                android:background="@drawable/icon_dalocation" />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/margin_other_view">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dip"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:text="客户拜访" />

                                    <LinearLayout
                                        android:layout_width="0dip"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="30" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="次数"
                                            android:textColor="@color/diseditable" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dip"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="16" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="客户数"
                                            android:textColor="@color/diseditable" />
                                    </LinearLayout>
                                </LinearLayout>

                                <View
                                    style="@style/view_split"
                                    android:layout_width="match_parent"
                                    android:layout_alignParentBottom="true" />
                            </RelativeLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_dashboard_record"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_65"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/margin_other_view"
                                android:background="@drawable/icon_daphone" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/margin_other_view">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dip"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:text="电话录音" />

                                    <LinearLayout
                                        android:layout_width="0dip"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="30" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="次数"
                                            android:textColor="@color/diseditable" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dip"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="16" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="客户数"
                                            android:textColor="@color/diseditable" />
                                    </LinearLayout>
                                </LinearLayout>

                                <View
                                    style="@style/view_split"
                                    android:layout_width="match_parent"
                                    android:layout_alignParentBottom="true" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            <include layout="@layout/include_solid_line15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_other_view"
                android:paddingRight="@dimen/margin_other_view">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dimen_5"
                        android:button="@null"
                        android:checked="true"
                        android:drawableBottom="@drawable/rb_home_stok"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="增量/存量"
                        android:textColor="@drawable/color_text_table2"
                        android:textSize="@dimen/text_sp15" />

                </RadioGroup>

                <LinearLayout
                    android:id="@+id/ll_case2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今天"
                        android:textSize="@dimen/text_sp13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:background="@drawable/icon_fauacukum" />
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/include_solid_line_left" />

            <com.loyo.oa.v2.customview.CustomerListView
                android:id="@+id/lv_stocklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_other_view"
                android:listSelector="@android:color/transparent" />

            <include layout="@layout/include_solid_line15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_other_view"
                android:paddingRight="@dimen/margin_other_view">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dimen_5"
                        android:button="@null"
                        android:checked="true"
                        android:drawableBottom="@drawable/rb_home_num"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="订单数量/金额"
                        android:textColor="@drawable/color_text_table2"
                        android:textSize="@dimen/text_sp15" />

                </RadioGroup>

                <LinearLayout
                    android:id="@+id/ll_case3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本月"
                        android:textSize="@dimen/text_sp13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:background="@drawable/icon_fauacukum" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/include_solid_line_left" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_dashboard_order_number"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <me.itangqi.waveloadingview.WaveLoadingView
                            android:id="@+id/waveLoadingView1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:wlv_borderWidth="3dp"
                            app:wlv_progressValue="40"
                            app:wlv_round_rectangle="true"
                            app:wlv_shapeType="circle"
                            app:wlv_titleCenterSize="15sp"
                            app:wlv_titleCenterStrokeWidth="3dp"
                            app:wlv_triangle_direction="north"
                            app:wlv_waveAmplitude="70" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="目标数量"
                            android:textColor="@color/text99" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:text="10000"
                            android:textColor="@color/text33" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="目标数量"
                            android:textColor="@color/text99" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:text="10000"
                            android:textColor="@color/text33" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_dashboard_order_money"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <me.itangqi.waveloadingview.WaveLoadingView
                        android:id="@+id/waveLoadingView2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:wlv_borderWidth="3dp"
                        app:wlv_progressValue="40"
                        app:wlv_round_rectangle="true"
                        app:wlv_shapeType="circle"
                        app:wlv_titleCenterSize="15sp"
                        app:wlv_titleCenterStrokeWidth="3dp"
                        app:wlv_triangle_direction="north"
                        app:wlv_waveAmplitude="70" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="目标金额"
                            android:textColor="@color/text99" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:text="$10000"
                            android:textColor="@color/text33" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单金额"
                            android:textColor="@color/text99" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:text="$10000"
                            android:textColor="@color/text33" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>