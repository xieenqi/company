<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/activity_bg"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/include_common_title_edit"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_customer_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_other_view"
                    android:layout_toLeftOf="@+id/layout_right"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_customer_name"
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/dimen_10"
                        android:singleLine="true"
                        android:textColor="@color/text33"
                        android:textSize="@dimen/text_sp16"
                        />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dimen_1"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:lineSpacingExtra="@dimen/dimen_3"
                        android:singleLine="false"
                        android:textColor="@color/text99"
                        android:textSize="@dimen/text_sp12"/>

                    <TextView
                        android:id="@+id/tv_tags"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dimen_10"
                        android:lineSpacingExtra="@dimen/dimen_3"
                        android:singleLine="false"
                        android:textColor="@color/text99"
                        android:textSize="@dimen/text_sp12"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layout_right"
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:id="@+id/img_public"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:src="@drawable/icon_customer_pick"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/dimen_4"
                        android:src="@drawable/right_arrow"
                        />
                </RelativeLayout>
            </LinearLayout>

            <include layout="@layout/include_solid_line_left"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout_contact"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:layout_marginLeft="@dimen/margin_other_view"
                    android:layout_marginRight="@dimen/dimen_4">

                    <TextView
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="联系人"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/right_arrow"/>
                </RelativeLayout>

                <include layout="@layout/include_solid_line_left"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:layout_marginLeft="@dimen/margin_other_view"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="姓名"/>

                    <TextView
                        android:id="@+id/tv_contact_name"
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_40"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/text99"/>
                </LinearLayout>

                <include layout="@layout/include_solid_line_left"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_48"
                        android:layout_marginLeft="@dimen/margin_other_view"
                        android:layout_toLeftOf="@+id/layout_action"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_item1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="手机"/>

                        <TextView
                            android:id="@+id/tv_contact_tel"
                            style="@style/text_item1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_40"
                            android:gravity="center"
                            android:textColor="@color/text99"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_action"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layout_send_sms"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_contacts_send_sms"/>

                        </LinearLayout>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/dimen_15"
                            android:layout_marginTop="@dimen/dimen_15"
                            android:background="@color/lineCC"
                            />

                        <LinearLayout
                            android:id="@+id/layout_call"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_contacts_call"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <include layout="@layout/include_solid_line_left"/>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dimen_48"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_48"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/text_item1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_16"
                            android:gravity="center"
                            android:text="座机"/>

                        <TextView
                            android:id="@+id/customer_detail_wiretel"
                            style="@style/text_item1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_40"
                            android:gravity="center"
                            android:textColor="@color/text99"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_wiretel_call"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_contacts_call"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout_sale_activity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:layout_marginLeft="@dimen/margin_other_view">

                    <TextView
                        android:id="@+id/tv_sale_activity_title"
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="跟进动态"/>

                    <TextView
                        android:id="@+id/tv_sale_activity_date"
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_12"
                        android:layout_toRightOf="@+id/tv_sale_activity_title"
                        android:gravity="center"
                        android:textColor="@color/text99"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimen_4"
                        android:src="@drawable/right_arrow"/>
                </RelativeLayout>

                <include layout="@layout/include_solid_line_left"/>


                <RelativeLayout
                    android:id="@+id/layout_visit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:layout_marginLeft="@dimen/margin_other_view">

                    <TextView
                        android:id="@+id/tv_visit_title"
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="拜访签到"/>

                    <TextView
                        android:id="@+id/tv_visit_times"
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_12"
                        android:layout_toRightOf="@+id/tv_visit_title"
                        android:gravity="center"
                        android:text="(0)"
                        android:textColor="@color/text99"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimen_4"
                        android:src="@drawable/right_arrow"/>
                </RelativeLayout>

                <include layout="@layout/include_solid_line_left"/>


                <RelativeLayout
                    android:id="@+id/layout_purchase"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:layout_marginLeft="@dimen/margin_other_view"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_purchase_title"
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="购买意向"/>

                    <TextView
                        android:id="@+id/tv_purchase_count"
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_12"
                        android:layout_toRightOf="@+id/tv_purchase_title"
                        android:gravity="center"
                        android:text="(0)"
                        android:textColor="@color/text99"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimen_4"
                        android:src="@drawable/right_arrow"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_sale"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:layout_marginLeft="@dimen/margin_other_view"
                    >

                    <TextView
                        android:id="@+id/tv_sale_title"
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="销售机会"/>

                    <TextView
                        android:id="@+id/tv_sale_count"
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_12"
                        android:layout_toRightOf="@+id/tv_sale_title"
                        android:gravity="center"
                        android:text="(0)"
                        android:textColor="@color/text99"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimen_4"
                        android:src="@drawable/right_arrow"/>
                </RelativeLayout>

                <include layout="@layout/include_solid_line_left"/>

                <RelativeLayout
                    android:id="@+id/layout_task"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:layout_marginLeft="@dimen/margin_other_view">

                    <TextView
                        android:id="@+id/tv_task_title"
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="任务计划"/>

                    <TextView
                        android:id="@+id/tv_task_count"
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_12"
                        android:layout_toRightOf="@+id/tv_task_title"
                        android:gravity="center"
                        android:text="(0)"
                        android:textColor="@color/text99"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimen_4"
                        android:src="@drawable/right_arrow"/>
                </RelativeLayout>

                <include layout="@layout/include_solid_line_left"/>

                <RelativeLayout
                    android:id="@+id/layout_attachment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:layout_marginLeft="@dimen/margin_other_view">

                    <TextView
                        android:id="@+id/tv_attachment_title"
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="文        件"/>

                    <TextView
                        android:id="@+id/tv_attachment_count"
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_12"
                        android:layout_toRightOf="@+id/tv_attachment_title"
                        android:gravity="center"
                        android:text="(0)"
                        android:textColor="@color/text99"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimen_4"
                        android:src="@drawable/right_arrow"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
