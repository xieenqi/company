<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/item_newmain_topview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/lineCC"
        >

        <TextView
            android:id="@+id/item_newmain_title"
            android:layout_marginLeft="@dimen/dimen_14"
            android:layout_marginTop="@dimen/dimen_7"
            android:layout_marginBottom="@dimen/dimen_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="crm"
            android:textSize="@dimen/text_sp15"
            android:textColor="@color/diseditable"
            />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/item_newmain_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/item_newmain_img"
            android:layout_width="@dimen/dimen_21"
            android:layout_height="@dimen/dimen_21"
            android:layout_marginBottom="@dimen/dimen_14"
            android:layout_marginLeft="@dimen/dimen_14"
            android:layout_marginTop="@dimen/dimen_14"
            android:background="@drawable/newmain_toast" />


        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/item_newmain_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通知公告"
                    />

                <ImageView
                    android:id="@+id/item_newmain_number"
                    android:layout_width="@dimen/dimen_9"
                    android:layout_height="@dimen/dimen_9"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_toRightOf="@+id/item_newmain_name"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_view_red_circle"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/item_newmain_state"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_14"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/text99"
                    android:textSize="@dimen/text_sp12"
                    />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lineCC"
        android:layout_marginLeft="49dp"
        />
</LinearLayout>