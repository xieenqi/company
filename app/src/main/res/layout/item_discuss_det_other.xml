<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:minWidth="1000dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_other_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_4"
        android:layout_marginTop="@dimen/dimen_8"
        android:gravity="center"
        android:text="2016/03/10"
        android:textColor="@color/text99"
        android:textSize="@dimen/text_sp12"/>

    <TextView
        android:id="@+id/tv_other_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_4"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="@dimen/dimen_4"
        android:singleLine="true"
        android:text="LIBO"
        android:textColor="@color/text66"
        android:textSize="@dimen/text_sp12"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="74dp"
        android:orientation="horizontal">

        <com.loyo.oa.v2.customview.RoundImageView
            android:id="@+id/iv_other_avatar"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_below="@+id/tv_notice_publisher"
            android:layout_marginBottom="@dimen/dimen_7"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginRight="@dimen/dimen_8"
            android:src="@drawable/img_default_user"
            imagecontrol:border_inside_color="#a8d4e9"
            imagecontrol:border_outside_color="#a8d4e9"
            imagecontrol:border_thickness="0dp"/>

        <TextView
            android:id="@+id/tv_other_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_4"
            android:background="@drawable/bg_other"
            android:gravity="center_vertical|left"
            android:maxWidth="@dimen/dimen_200"
            android:minHeight="@dimen/dimen_40"
            android:paddingBottom="@dimen/dimen_16"
            android:paddingLeft="@dimen/dimen_24"
            android:paddingRight="@dimen/dimen_16"
            android:textIsSelectable="true"
            android:paddingTop="@dimen/dimen_16"
            android:text=""
            android:textColor="@color/text33"
            android:textSize="@dimen/text_sp14"/>

        <RelativeLayout
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_toLeftOf="@+id/tv_mine_content">


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>