<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <include layout="@layout/include_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="@string/estimate_page_string4"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_time"
            style="@style/text_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:hint="必填,请选择"
            android:textColor="@color/title_bg1"
            android:textColorHint="@color/text99"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:scaleType="center"
            android:src="@drawable/right_arrow"/>

    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="@string/estimate_page_string5"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/et_estprice"
            style="@style/edtText_add_order"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:textColor="@color/title_bg1"
            android:gravity="center_vertical|right"
            android:hint="必填,请输入"
            android:maxLength="7"
            android:singleLine="true"
            android:numeric="integer"
            android:minHeight="@dimen/dimen_48"
            android:paddingBottom="@dimen/dimen_5"
            android:paddingTop="@dimen/dimen_5"
            android:textSize="15sp"/>

        <ImageView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:scaleType="center"
            android:src="@drawable/right_arrow"/>

    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="@string/estimate_page_string6"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/et_kaiprice"
            style="@style/edtText_add_order"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical|right"
            android:textColor="@color/title_bg1"
            android:hint="0"
            android:maxLength="7"
            android:singleLine="true"
            android:numeric="integer"
            android:minHeight="@dimen/dimen_48"
            android:paddingBottom="@dimen/dimen_5"
            android:paddingTop="@dimen/dimen_5"
            android:textSize="15sp"/>

        <ImageView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:scaleType="center"
            android:src="@drawable/right_arrow"/>

    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

    <LinearLayout
        android:id="@+id/ll_priecer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="@string/estimate_page_string7"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_priceer"
            style="@style/text_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:hint="必填,请选择"
            android:textColor="@color/title_bg1"
            android:textColorHint="@color/text99"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:scaleType="center"
            android:src="@drawable/right_arrow"/>

    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

    <LinearLayout
        android:id="@+id/ll_kind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="@string/estimate_page_string8"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_kind"
            style="@style/text_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:hint="必填,请选择"
            android:textColor="@color/title_bg1"
            android:textColorHint="@color/text99"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:scaleType="center"
            android:src="@drawable/right_arrow"/>

    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

    <LinearLayout
        android:id="@+id/ll_attachment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_attachment"
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="@string/estimate_page_string9"
            android:textSize="15sp"/>

        <TextView
            style="@style/text_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:scaleType="center"
            android:src="@drawable/right_arrow"/>

    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

    <EditText
        android:id="@+id/et_remake"
        style="@style/edtText_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="top"
        android:hint="备注"
        android:maxLength="500"
        android:minHeight="@dimen/dimen_100"
        android:paddingBottom="@dimen/dimen_5"
        android:paddingTop="@dimen/dimen_5"
        android:textSize="15sp"/>
    </LinearLayout>
    </ScrollView>

</LinearLayout>