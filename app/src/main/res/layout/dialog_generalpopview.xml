<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/dialog_blue"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:text="提示"
                android:textColor="#FFFFFF"
                android:textSize="19sp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/dialog_generalpopview_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="28dp"
            android:text="消息发布后不能萨达萨萨实打实的飒飒的,确定发布?"
            android:textColor="#666666"
            android:textSize="16sp"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray0990"
            />

        <LinearLayout
            android:id="@+id/dialog_nocancelpopview_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/dialog_nocancelpopview_sure"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/attendance_popview_selector"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/dialog_blue"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_generalpopview_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/dialog_generalpopview_cancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/attendance_popview_selector"
                android:gravity="center"
                android:text="取消"
                android:textSize="16sp"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/gray0990"
                />

            <TextView
                android:id="@+id/dialog_generalpopview_sure"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/attendance_popview_selector"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/dialog_blue"
                android:textSize="16sp"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>