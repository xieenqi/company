<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dimen_17"
        android:paddingLeft="@dimen/dimen_14"
        android:paddingTop="@dimen/dimen_17"
        android:singleLine="true"
        android:textSize="@dimen/text_sp15"
        android:textColor="@color/text33"
        android:text=""
        />

    <ImageView
        android:id="@+id/img_right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_h_title"
        android:scaleType="center"
        android:src="@drawable/right_arrow" />

</LinearLayout>