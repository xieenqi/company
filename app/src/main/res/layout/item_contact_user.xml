<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_medleft_top"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/des_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_8"
        android:layout_marginTop="@dimen/dimen_8"
        android:gravity="center_vertical">

        <com.loyo.oa.v2.customview.RoundImageView
            android:id="@+id/avatar_view"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_other_view"
            android:src="@drawable/img_default_user"
            imagecontrol:border_thickness="0dp"/>
        <!-- imagecontrol:border_inside_color="#a8d4e9"
                    imagecontrol:border_outside_color="#a8d4e9"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_other_view"
            android:layout_toRightOf="@+id/avatar_view"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_3"
                android:text="XXX"
                android:textColor="@color/text33"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/user_dept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成都乐育"
                android:textColor="#999999"
                android:textSize="12sp"
                />
        </LinearLayout>

    </RelativeLayout>

    <include
        android:id="@+id/separate_line"
        layout="@layout/include_solid_line_left"/>
</LinearLayout>