<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/title_bg1"
    android:layout_height="@dimen/view_h_title">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/img_title_left"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back_left1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginRight="@dimen/margin_side_edge"
            android:gravity="center_vertical"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/img_title_search_right_none"
        android:layout_width="39dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent">

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title_1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        style="@style/text_title"
        android:text="标题" />

    <RelativeLayout
        android:id="@+id/img_title_search_right"
        android:layout_width="39dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_search" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/img_title_right"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/margin_side_edge"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_title_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_h_title"
            android:scaleType="center"
            android:textColor="@color/white"
            android:background="@color/title_bg1"
            android:textSize="16sp"
            android:text="确定"
            android:layout_marginRight="@dimen/margin_side_edge" />

    </RelativeLayout>


</LinearLayout>