<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/view_h_title"
              android:background="@color/title_bg1"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/img_title_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_5"
            android:scaleType="fitCenter"
            android:src="@drawable/back_left1"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginRight="@dimen/margin_side_edge"
            android:gravity="center_vertical"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/img_title_search_right_none"
        android:layout_width="39dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title_1"
        style="@style/text_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="标题"
        android:textSize="18sp"
        />

    <RelativeLayout
        android:id="@+id/img_title_search_right"
        android:layout_width="39dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_search"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/img_title_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin_side_edge"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_title_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_h_title"
            android:layout_marginRight="@dimen/margin_side_edge"
            android:background="@color/title_bg1"
            android:scaleType="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </RelativeLayout>


</LinearLayout>