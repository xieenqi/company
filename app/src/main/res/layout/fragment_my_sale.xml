<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/saleteam_topview"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/salemy_screen1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销售阶段" />

            <ImageView
                android:id="@+id/salemy_screen1_iv1"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/arrow_down" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lineCC"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            />

        <LinearLayout
            android:id="@+id/salemy_screen2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排序" />

            <ImageView
                android:id="@+id/salemy_screen1_iv2"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/arrow_down" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/include_solid_line"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_nodata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="22dp"
                    android:src="@drawable/img_nodata"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="没有相关数据"
                    android:textColor="#878787"
                    android:textSize="18sp"/>

            </LinearLayout>

        </RelativeLayout>

        <com.loyo.oa.v2.tool.customview.pullToRefresh.PullToRefreshListView
            android:id="@+id/lv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whitesmoke"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:drawSelectorOnTop="true"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:smoothScrollbar="true"
            android:scrollbars="none"
            />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="3dp"
            android:background="@drawable/bg_btn_circle"
            android:textColor="@color/white"/>

    </FrameLayout>
</LinearLayout>
