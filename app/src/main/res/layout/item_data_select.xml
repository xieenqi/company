<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_select_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_3"
        android:layout_marginTop="@dimen/dimen_3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_select_num"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/text_sp18" />

        <TextView
            android:id="@+id/item_select_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:text=""
            android:textColor="@color/text99"
            android:textSize="@dimen/text_sp10" />

    </LinearLayout>
</LinearLayout>