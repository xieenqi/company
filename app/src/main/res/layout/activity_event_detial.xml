<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/include_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_other_view"
            android:text="这点性能损耗还是可以接受的，在开发效率之间选择是可以接送的。性能完全可以在其他地方找回来"
            android:textColor="@color/text33"
            android:textSize="@dimen/text_sp16"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_5"
            android:layout_marginLeft="@dimen/margin_other_view"
            android:layout_marginRight="@dimen/margin_other_view"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen_8"
                android:gravity="center_vertical|left"
                android:text="08-23 | 09-08截至"
                android:textColor="@color/text99"
                android:textSize="@dimen/text_sp11"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/retange_green"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_2"
                android:paddingRight="@dimen/dimen_2"
                android:text="已完成"
                android:textColor="@color/white"
                android:textSize="@dimen/text_sp11"
                />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_other_view"
        android:layout_marginRight="@dimen/margin_other_view"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="负责人：刘鹏"
        android:textColor="@color/text33"
        android:textSize="@dimen/text_sp16"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_other_view"
        android:layout_marginRight="@dimen/margin_other_view"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="触发方式：定时触发"
        android:textColor="@color/text33"
        android:textSize="@dimen/text_sp16"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/margin_other_view"
        android:layout_marginRight="@dimen/margin_other_view"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="所属工单：xxxxx"
        android:textColor="@color/text33"
        android:textSize="@dimen/text_sp16"
        />

    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:layout_margin="@dimen/margin_other_view"
        android:background="@drawable/round_bg_shpe"
        android:text="重做"
        android:textColor="@color/white"
        android:visibility="visible"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/activity_bg"/>
</LinearLayout>
