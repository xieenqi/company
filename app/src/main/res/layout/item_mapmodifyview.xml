<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="9"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_mapmodify_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_other_view"
                android:text="message"
                android:textColor="@color/text33"
                android:textSize="@dimen/text_sp15" />

            <TextView
                android:id="@+id/item_mapmodify_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_5"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_other_view"
                android:text="message"
                android:textColor="@color/text99"
                android:textSize="@dimen/text_sp12" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_width="0dip"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_mapmodify_select"
                android:layout_width="@dimen/dimen_23"
                android:layout_height="@dimen/dimen_23"
                android:layout_marginRight="@dimen/margin_other_view"
                android:background="@drawable/icon_mapnodiy_selected"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>