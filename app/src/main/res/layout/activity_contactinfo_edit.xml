<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg1"
        android:orientation="horizontal">

        <include layout="@layout/include_common_title_2" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_set_avartar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_65"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <com.loyo.oa.v2.customview.RoundImageView
                    android:id="@+id/img_title_user"
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:src="@drawable/icon_contact_avatar" />

                <TextView
                    android:id="@+id/name_title_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/img_title_user"
                    android:layout_weight="1"
                    android:text="name" />

                <ImageView
                    android:id="@+id/iv_set_avartar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_4"
                    android:scaleType="fitCenter"
                    android:src="@drawable/right_arrow" />
            </LinearLayout>


            <include layout="@layout/include_solid_line15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_h_title"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/margin_side_edge">

                <TextView
                    style="@style/text_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:minWidth="@dimen/dimen_60"
                    android:text="手机"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_mobile"
                    style="@style/text_item1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/text99"
                    android:textSize="15sp" />

            </LinearLayout>

            <include layout="@layout/include_solid_line_left" />

            <LinearLayout
                android:id="@+id/layout_weixin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_h_title"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:minWidth="@dimen/dimen_60"
                    android:text="微信"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/et_weixin"
                    style="@style/text_item1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:textColor="@color/text66"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:scaleType="center"
                    android:src="@drawable/right_arrow" />

            </LinearLayout>

            <include layout="@layout/include_solid_line_left" />



            <RelativeLayout
                android:id="@+id/layout_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_sex_title"
                        style="@style/text_style99"
                        android:text="性别" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimen_50"
                        android:layout_toRightOf="@+id/tv_sex_title"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/sex_male"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="女" />

                            <RadioButton
                                android:id="@+id/sex_famale"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dimen_30"
                                android:text="男" />

                        </RadioGroup>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <View
                style="@style/view_split"
                android:layout_width="match_parent" />

            <RelativeLayout
                android:id="@+id/layout_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/tv_birthday_title"
                        style="@style/text_style99"
                        android:text="生日" />

                    <TextView
                        android:id="@+id/tv_birthday"
                        style="@style/text_item1"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_50"
                        android:layout_toRightOf="@+id/tv_birthday_title"
                        android:textColor="#383838" />

                    <ImageView
                        android:id="@+id/iv_set_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_side_edge"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                style="@style/view_split"
                android:layout_width="match_parent" />

            <RelativeLayout
                android:id="@+id/layout_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <TextView
                        android:id="@+id/tv_age_title"
                        style="@style/text_style99"
                        android:text="年龄" />

                    <TextView
                        android:id="@+id/tv_age"
                        style="@style/text_item1"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_50"
                        android:layout_toRightOf="@+id/tv_age_title"
                        android:textColor="#999999" />

                </RelativeLayout>
            </RelativeLayout>

            <include layout="@layout/include_solid_line15" />

            <RelativeLayout
                android:id="@+id/layout_departments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/tv_departments_title"
                        style="@style/text_style99"
                        android:text="部门" />

                    <TextView
                        android:id="@+id/tv_departments"
                        style="@style/text_item1"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_50"
                        android:layout_toRightOf="@+id/tv_departments_title"
                        android:textColor="#999999" />

                </RelativeLayout>
            </RelativeLayout>

            <View
                style="@style/view_split"
                android:layout_width="match_parent" />

            <RelativeLayout
                android:id="@+id/layout_positions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/tv_positions_title"
                        style="@style/text_style99"
                        android:text="职位" />

                    <TextView
                        android:id="@+id/tv_positions"
                        style="@style/text_item1"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/dimen_50"
                        android:layout_toRightOf="@+id/tv_positions_title"
                        android:textColor="#999999" />

                </RelativeLayout>
            </RelativeLayout>
            <!--</LinearLayout>-->

        </LinearLayout>
    </ScrollView>
</LinearLayout>
