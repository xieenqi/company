<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:minWidth="1000dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_mine_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_4"
        android:layout_marginTop="@dimen/dimen_8"
        android:gravity="center"
        android:text="2016/03/10"
        android:textColor="@color/text99"
        android:textSize="@dimen/text_sp12"/>

    <TextView
        android:id="@+id/tv_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_4"
        android:layout_marginLeft="74dp"
        android:layout_marginRight="74dp"
        android:gravity="right"
        android:singleLine="true"
        android:text="我"
        android:textColor="@color/text66"
        android:textSize="@dimen/text_sp12"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:layout_toLeftOf="@+id/tv_mine_content">


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_mine_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dimen_8"
                android:autoLink="all"
                android:background="@drawable/bg_mine"
                android:gravity="center_vertical|left"
                android:maxWidth="@dimen/dimen_200"
                android:minHeight="60dp"
                android:paddingBottom="@dimen/dimen_16"
                android:paddingLeft="@dimen/dimen_16"
                android:paddingRight="@dimen/dimen_24"
                android:paddingTop="@dimen/dimen_16"
                android:text="布多啥办法把收到回"
                android:textColor="#fff"
                android:textIsSelectable="true"
                android:textSize="@dimen/text_sp14"/>

        </RelativeLayout>

        <com.loyo.oa.v2.customview.RoundImageView
            android:id="@+id/iv_mine_avatar"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_notice_publisher"
            android:layout_marginBottom="@dimen/dimen_7"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_marginRight="@dimen/dimen_16"
            android:src="@drawable/img_default_user"
            imagecontrol:border_inside_color="#a8d4e9"
            imagecontrol:border_outside_color="#a8d4e9"
            imagecontrol:border_thickness="0dp"/>

    </LinearLayout>

</LinearLayout>