<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg1"
        android:orientation="vertical">

        <include layout="@layout/include_common_title_2"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_65"
                android:background="@color/white"
                android:orientation="horizontal">

                <com.loyo.oa.v2.tool.customview.RoundImageView
                    android:id="@+id/iv_avartar"
                    android:layout_width="@dimen/dimen_48"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_contact_avatar"
                    imagecontrol:border_inside_color="@color/white"
                    imagecontrol:border_outside_color="@color/white60"
                    imagecontrol:border_thickness="1dp"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:gravity="center"
                    android:text="方静"
                    android:textColor="@color/text33"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tv_role"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:gravity="center"
                    android:text="研发部 测试"
                    android:textColor="#999999"
                    android:textSize="16sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_attendance_rusult"
                android:minHeight="@dimen/dimen_30"
                android:orientation="vertical"
                >
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_type"
                    android:layout_width="@dimen/dimen_25"
                    android:layout_height="@dimen/dimen_25"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10"
                    />
                <TextView
                    android:id="@+id/tv_address_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:text="位置"
                    android:textColor="@color/gray"
                    />
            </LinearLayout>

                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="45dp"
                    android:layout_marginBottom="5dp"
                    android:singleLine="false"
                    android:text="迟到了,打卡时间"
                    android:textColor="@color/gray"
                    />

                </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_25"
                android:layout_marginTop="@dimen/dimen_8"
                android:drawableLeft="@drawable/icon_attendance_explanation"
                android:drawablePadding="@dimen/dimen_2"
                android:text="说明"
                android:textColor="@color/text99"
                />

            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_16"
                android:gravity="left|center"
                android:minHeight="@dimen/dimen_55"
                android:text="迟到原因"
                android:textColor="#999999"
                android:textSize="16sp"/>

            <GridView
                android:id="@+id/gridView_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:gravity="center"
                android:horizontalSpacing="@dimen/activity_horizontal_margin"
                android:listSelector="@android:color/transparent"
                android:numColumns="3"
                android:verticalSpacing="@dimen/activity_horizontal_margin"/>

            <LinearLayout
                android:id="@+id/ll_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8"
                android:layout_marginRight="@dimen/dimen_8"
                android:background="@drawable/rectangle_bj"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen_10"
                android:padding="@dimen/dimen_10"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_confirmDept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#999999"
                        android:textSize="@dimen/text_sp14"/>

                    <TextView
                        android:id="@+id/tv_confirmName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_8"
                        android:text=""
                        android:textColor="#999999"
                        android:textSize="@dimen/text_sp14"/>

                    <TextView
                        android:id="@+id/tv_confirmTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_8"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text=""
                        android:textColor="#999999"
                        android:textSize="@dimen/text_sp14"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_3"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:background="@drawable/view_dashed_line"
                    android:layerType="software"
                    android:padding="@dimen/dimen_15"/>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="@dimen/dimen_25"
                        android:layout_height="@dimen/dimen_25"
                        android:src="@drawable/img_wfinstance_agree"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_8"
                        android:text="确认外勤"
                        android:textColor="@color/green51"
                        android:textSize="@dimen/text_sp18"
                        android:textStyle="bold"/>
                </LinearLayout>


            </LinearLayout>


            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_45"
                android:layout_margin="@dimen/dimen_10"
                android:background="@drawable/round_bg_shpe"
                android:text="确认外勤"
                android:textColor="@color/white"
                android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
