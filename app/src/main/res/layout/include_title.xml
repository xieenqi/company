<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_h_title"
                android:background="@color/title_bg1"
                android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="70dp"
        android:layout_height="@dimen/view_h_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_other_view"
            android:scaleType="fitCenter"
            android:src="@drawable/back_left1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:maxEms="11"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/text_sp18"
        />

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/margin_side_edge"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/text_sp16"
        />

    <ImageView
        android:id="@+id/iv_submit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_8"
        android:gravity="center_vertical"
        android:scaleType="fitCenter"
        android:src="@drawable/right_submit1"
        android:visibility="gone"/>


</RelativeLayout>
