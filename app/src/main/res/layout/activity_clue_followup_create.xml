<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    >

    <include
        android:id="@+id/include_title"
        layout="@layout/include_item_title" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@+id/include_title"
        android:layout_above="@+id/layout_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_other_view">

                <EditText
                    android:id="@+id/edt"
                    style="@style/edtText_normal"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:gravity="left|top"
                    android:hint="请填写跟进内容"
                    android:minHeight="200dp"
                    android:paddingBottom="@dimen/dimen_10"
                    android:paddingLeft="0dp"
                    android:paddingTop="@dimen/dimen_10" />

                <LinearLayout
                    android:id="@+id/layout_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_bg1"
                    android:orientation="vertical">

                    <com.loyo.oa.v2.customview.CusGridView
                        android:id="@+id/gridView_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_16"
                        android:layout_marginRight="@dimen/dimen_16"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:horizontalSpacing="@dimen/activity_horizontal_margin"
                        android:listSelector="@android:color/transparent"
                        android:numColumns="3"
                        android:verticalSpacing="@dimen/activity_horizontal_margin" />

                </LinearLayout>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_contactItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_contact"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_side_edge"
                        android:minWidth="@dimen/dimen_60"
                        android:text="联  系  人"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_contact_name"
                        style="@style/text_item1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:hint=""
                        android:paddingRight="@dimen/dimen_14"
                        android:textColor="@color/title_bg1"
                        android:textColorHint="@color/text99"
                        android:textSize="15sp" />

                </LinearLayout>

                <include layout="@layout/include_solid_line_left" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_sale_action"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingRight="@dimen/dimen_4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_other_view"
                    android:gravity="center_vertical"
                    android:minWidth="@dimen/dimen_100"
                    android:text="跟 进 方 式"
                    android:textColor="@color/text33"
                    android:textSize="@dimen/text_sp15" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_sale_action"
                        style="@style/text_item1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/img_right_arrow1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="必选,请选择"
                        android:singleLine="false"
                        android:text=""
                        android:textColor="@color/title_bg1" />

                    <ImageView
                        android:id="@+id/img_right_arrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>
            </LinearLayout>
            <include layout="@layout/include_solid_line_left" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_status"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45"
        android:background="#F1F1F1"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_image"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dimen_23"
                android:layout_height="@dimen/dimen_23"
                android:background="@drawable/icon_selectimage_view" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="invisible">

            <ImageView
                android:layout_width="@dimen/dimen_23"
                android:layout_height="@dimen/dimen_23"
                android:background="@drawable/icon_position_modify" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="invisible">

            <ImageView
                android:layout_width="@dimen/dimen_23"
                android:layout_height="@dimen/dimen_23"
                android:background="@drawable/icon_position_modify" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="invisible">

            <ImageView
                android:layout_width="@dimen/dimen_23"
                android:layout_height="@dimen/dimen_23"
                android:background="@drawable/icon_position_modify" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="invisible">

            <ImageView
                android:layout_width="@dimen/dimen_25"
                android:layout_height="@dimen/dimen_25"
                android:background="@drawable/icon_position_modify" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>