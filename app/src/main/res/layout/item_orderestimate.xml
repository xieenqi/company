<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEDEE">

        <TextView
            android:id="@+id/tv_titlenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/margin_other_view"
            android:layout_marginTop="@dimen/dimen_10"
            android:text=""
            android:textColor="@color/gray" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:paddingLeft="@dimen/margin_other_view">

        <TextView
            android:id="@+id/tv_esttime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/estimate_page_string4" />

        <ImageView
            android:layout_width="@dimen/dimen_45"
            android:layout_height="@dimen/dimen_18"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_toRightOf="@+id/tv_esttime_title"
            android:background="@drawable/img_wfinstance_status3" />

        <TextView
            android:id="@+id/tv_esttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_other_view"
            android:text="" />

    </RelativeLayout>

    <include layout="@layout/include_solid_line_left" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:paddingLeft="@dimen/margin_other_view">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/estimate_page_string5" />

        <TextView
            android:id="@+id/tv_esttime_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_other_view"
            android:text="" />

    </RelativeLayout>

    <include layout="@layout/include_solid_line_left" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:paddingLeft="@dimen/margin_other_view">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/estimate_page_string6" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_other_view"
            android:text="" />

    </RelativeLayout>

    <include layout="@layout/include_solid_line_left" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:paddingLeft="@dimen/margin_other_view">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/estimate_page_string7" />

        <TextView
            android:id="@+id/tv_payee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_other_view"
            android:text="" />

    </RelativeLayout>

    <include layout="@layout/include_solid_line_left" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:paddingLeft="@dimen/margin_other_view">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="收款方式" />

        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_other_view"
            android:text="未选择" />

    </RelativeLayout>

    <include layout="@layout/include_solid_line_left" />

    <LinearLayout
        android:id="@+id/ll_attachment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:minWidth="@dimen/dimen_60"
            android:text="@string/estimate_page_string9"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_attachment"
            style="@style/text_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:scaleType="center"
            android:src="@drawable/right_arrow" />

    </LinearLayout>

    <include layout="@layout/include_solid_line_left" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_other_view">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_16"
            android:text="备注" />

        <TextView
            android:id="@+id/tv_Remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_other_view"
            android:text="" />

    </RelativeLayout>

    <include layout="@layout/include_solid_line_left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_delete"
            android:paddingBottom="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_16"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_order_delete" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textColor="@color/text99" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lineCC"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginBottom="@dimen/dimen_5"
            />

        <LinearLayout
            android:id="@+id/btn_edit"
            android:paddingBottom="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_16"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_order_edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:textColor="@color/text99" />
        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/include_solid_line_left" />

</LinearLayout>