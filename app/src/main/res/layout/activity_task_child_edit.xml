<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/activity_bg"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
    >

    <include layout="@layout/include_common_title1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5"
            android:background="@color/white"
            android:gravity="top"
            android:hint="请输入子任务内容"
            android:inputType="textMultiLine"
            android:minHeight="@dimen/dimen_120"
            android:padding="10dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dimen_15"
        android:background="@color/gray0990"
        />

    <LinearLayout
        android:id="@+id/ll_responser"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical">

            <TextView
                style="@style/textView_hint"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="10dp"
                android:text="负责人"
                android:textColor="@color/black"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_responser"
            style="@style/textView_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="0.1"
            android:drawableRight="@drawable/right_arrow"
            android:gravity="center"
            android:text="点击添加负责人"
            android:textColor="@color/title_bg1"
            />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/gray0990"
        />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15"
        android:background="@color/red1"
        android:text="删除"
        android:textColor="@color/whitesmoke"/>

</LinearLayout>