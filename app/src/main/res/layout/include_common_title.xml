<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_h_title"
    android:layout_gravity="fill_horizontal"
    android:background="@color/title_bg1">

    <LinearLayout
        android:id="@+id/img_title_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dimen_23"
            android:layout_height="@dimen/dimen_23"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_5"
            android:scaleType="fitCenter"
            android:src="@drawable/back_left1" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginRight="@dimen/dimen_8"
            android:gravity="center_vertical"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sp16" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_title_1"
        style="@style/text_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="" />

    <!--<ImageView-->
    <!--android:id="@+id/img_title_right"-->
    <!--android:layout_width="@dimen/view_h_title"-->
    <!--android:layout_height="@dimen/view_h_title"-->
    <!--android:scaleType="center" />-->

</RelativeLayout>

