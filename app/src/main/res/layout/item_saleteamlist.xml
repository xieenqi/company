<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_14"
        android:layout_marginRight="@dimen/dimen_14"
        android:layout_marginTop="@dimen/dimen_10"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/sale_teamlist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成都东软收购机会"
            android:textColor="@color/text33"
            android:textSize="@dimen/text_sp15"
            />

        <TextView
            android:id="@+id/sale_teamlist_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="初步接洽(10%)"
            android:textColor="@color/title_bg1"
            android:textSize="@dimen/text_sp15"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_14"
        android:layout_marginTop="@dimen/dimen_4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_saleteam_dollar"
            />

        <TextView
            android:id="@+id/sale_teamlist_guess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_5"
            android:text="预估销售金额:"
            android:textColor="@color/text99"
            android:textSize="@dimen/text_sp12"
            />

        <TextView
            android:id="@+id/sale_teamlist_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_5"
            android:text="2000"
            android:textColor="@color/text99"
            android:textSize="@dimen/text_sp12"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_14"
        android:layout_marginTop="@dimen/dimen_3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_saleteam_user"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_3"
            android:text="负责人:"
            android:textColor="@color/text99"
            android:textSize="@dimen/text_sp12"
            />

        <TextView
            android:id="@+id/sale_teamlist_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_5"
            android:text="罗超"
            android:textColor="@color/text99"
            android:textSize="@dimen/text_sp12"
            />

    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>

</LinearLayout>