<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:orientation="horizontal"
        android:paddingRight="@dimen/margin_side_edge">

        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:layout_weight="1"
            android:text="签到人"
            android:textColor="@color/text33"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center|right"
            android:text="时间"
            android:textColor="@color/text99"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_sign_list_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:src="@drawable/icon_follow_up_creator"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="123"
            android:textColor="@color/text99"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_side_edge"
        android:layout_marginTop="@dimen/dimen_3"
        android:orientation="horizontal"
        android:paddingRight="@dimen/margin_side_edge">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_sinain_position"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="客户地址"
            android:textColor="@color/text99"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/margin_side_edge"
        android:layout_marginTop="@dimen/dimen_3"
        android:orientation="horizontal"
        android:paddingRight="@dimen/margin_side_edge">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_sign_list_position"/>

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="客户签到"
            android:textColor="@color/text99"
            android:textSize="12sp"/>
    </LinearLayout>

    <include layout="@layout/include_solid_line_left"/>
</LinearLayout>
