<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/activity_bg"
              android:orientation="vertical">

    <include layout="@layout/include_common_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_new_password"
            style="@style/edtText_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入新密码"
            android:minHeight="@dimen/dimen_50"/>


        <View
            style="@style/view_split"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_side_edge"
            />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_confirm_new_password"
            style="@style/edtText_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请再输入一次"
            android:minHeight="@dimen/dimen_50"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_margin="@dimen/dimen_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bg_shpe"
        android:text="完成"
        android:textColor="@color/white"/>


</LinearLayout>