<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_cellphone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_h_title"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/text_item1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:layout_weight="1"
                android:text="手机账号"
                android:textSize="@dimen/textsize_content1" />

            <ImageView
                android:id="@+id/iv_cell_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5"
                android:scaleType="center"
                android:src="@drawable/icon_no_binding" />

            <TextView
                android:id="@+id/iv_cell_number"
                style="@style/text_item1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="right|center_vertical"
                android:text="未绑定"
                android:textColor="@color/text99"
                android:textSize="@dimen/text_sp15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/right_arrow" />

        </LinearLayout>

        <include layout="@layout/include_solid_line_left" />

        <LinearLayout
            android:id="@+id/ll_setpassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_h_title"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/text_item1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:layout_weight="1"
                android:text="修改密码"
                android:textSize="@dimen/textsize_content1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/right_arrow" />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/include_solid_line_left" />

    <include layout="@layout/include_solid_line15" />


    <LinearLayout
        android:id="@+id/ll_clean"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:text="清除缓存"
            android:textSize="@dimen/textsize_content1" />

        <TextView
            android:id="@+id/tv_cache_size"
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="2.5mb"
            android:textColor="@color/text99"
            android:textSize="@dimen/text_sp15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/right_arrow" />

    </LinearLayout>

    <include layout="@layout/include_solid_line_left" />

    <LinearLayout
        android:id="@+id/ll_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_item1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/margin_side_edge"
            android:layout_weight="1"
            android:text="更新数据"
            android:textSize="@dimen/textsize_content1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/right_arrow" />

    </LinearLayout>

    <include layout="@layout/include_solid_line_left" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:padding="@dimen/dimen_10"
        android:text="更新数据包括:组织架构,审批类型,客户信息(标签、动态字段)等"
        android:textColor="@color/text99" />

    <LinearLayout
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_h_title"
        android:background="@drawable/layout_bg1"
        android:gravity="center_horizontal">

        <TextView
            style="@style/text_item1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="退出"
            android:textColor="@color/title_bg1"
            android:textSize="@dimen/text_sp18" />

    </LinearLayout>

</LinearLayout>