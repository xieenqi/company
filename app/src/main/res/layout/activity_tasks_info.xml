<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <include layout="@layout/include_common_title_edit"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/margin_side_edge"
                android:paddingTop="8dp"
                android:singleLine="false"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tv_sub_title"
                style="@style/textView_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/margin_side_edge"
                android:textSize="13sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3"
                android:layout_margin="@dimen/dimen_10"
                android:background="@drawable/view_dashed_line"
                android:layerType="software"/>

            <TextView
                android:id="@+id/tv_content"
                style="@style/edtText_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left|top"
                android:minHeight="60dp"
                android:paddingBottom="8dp"
                android:paddingLeft="@dimen/margin_side_edge"
                android:paddingRight="@dimen/margin_side_edge"
                android:paddingTop="8dp"
                android:singleLine="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_remind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:textColor="#999999"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_responsiblePerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:text="负责人:"
                    android:textColor="#999999"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_toUsers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:singleLine="false"
                    android:text="参与人:"
                    android:textColor="#999999"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_task_audit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_task_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="12sp"/>

            </LinearLayout>

            <View
                style="@style/view_split"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_side_edge"
                android:layout_marginRight="@dimen/margin_side_edge"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_discussion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/view_h_title"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_side_edge"
                        android:text="讨论"/>

                    <TextView
                        android:id="@+id/tv_discussion_count"
                        style="@style/text_item1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_side_edge"
                        android:layout_weight="1"
                        android:text="0"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/right_arrow"/>

                </LinearLayout>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_side_edge"/>

                <LinearLayout
                    android:id="@+id/layout_attachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/view_h_title"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_side_edge"
                        android:text="附件"/>

                    <TextView
                        android:id="@+id/tv_attachment_count"
                        style="@style/text_item1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_side_edge"
                        android:layout_weight="1"
                        android:text="0"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/right_arrow"/>

                </LinearLayout>

                <!--<View-->
                <!--style="@style/view_split"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_marginLeft="@dimen/margin_side_edge"-->
                <!--android:layout_marginRight="@dimen/margin_side_edge"/>-->

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_children_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_row_margin_top"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_side_edge"
                        android:text="子任务"/>

                    <TextView
                        android:id="@+id/tv_children_info"
                        style="@style/text_item1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_side_edge"
                        android:layout_weight="1"
                        android:text="0"/>

                    <LinearLayout
                        android:id="@+id/layout_child_add_action"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dimen_20"
                            android:layout_marginRight="@dimen/dimen_20"
                            android:scaleType="centerInside"
                            android:src="@drawable/img_add"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_child_Add_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_other_view"
                android:layout_marginTop="@dimen/view_first_margin_top"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/image_label"
                        android:layout_marginLeft="@dimen/margin_side_edge"
                        android:layout_marginRight="@dimen/margin_other_view"
                        android:src="@drawable/star"/>

                    <TextView
                        style="@style/textView_hint"
                        android:layout_width="86dp"
                        android:layout_height="@dimen/view_h_title"
                        android:gravity="left|center_vertical"
                        android:text="任务评分"/>

                    <RatingBar
                        android:id="@+id/ratingBar_Task"
                        style="@style/roomRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_marginLeft="29dp"
                        android:gravity="right|center_vertical"
                        android:isIndicator="true"
                        android:max="100"
                        android:numStars="5"
                        android:stepSize="1"/>

                </LinearLayout>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_side_edge"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/image_label"
                        android:layout_marginLeft="@dimen/margin_side_edge"
                        android:layout_marginRight="@dimen/margin_other_view"
                        android:src="@drawable/task_audit"/>

                    <TextView
                        style="@style/textView_hint"
                        android:layout_width="86dp"
                        android:layout_height="@dimen/view_h_title"
                        android:gravity="left|center_vertical"
                        android:text="审核"/>

                    <TextView
                        android:id="@+id/tv_reviewer"
                        style="@style/text_item2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="29dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text=""/>

                </LinearLayout>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin_side_edge"
                    android:layout_marginRight="@dimen/margin_side_edge"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_h_title"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_comment"
                        style="@style/text_item2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="29dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text=""/>

                </LinearLayout>

                <View
                    style="@style/view_split"
                    android:layout_width="match_parent"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_other_view"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/margin_other_view"
                android:background="@color/title_bg1"
                android:textColor="@color/white"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>