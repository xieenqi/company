<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/whitesmoke"
              android:orientation="vertical">

    <include
        android:id="@+id/include_common"
        layout="@layout/include_header_drop_search"/>

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <FrameLayout
            android:id="@+id/layout_customer_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/layout_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_70"
            android:paddingRight="@dimen/dimen_70"
            android:visibility="gone">

            <ListView
                android:id="@+id/lv_customer_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_bg_shpe"
                android:cacheColorHint="#00000000"
                android:choiceMode="singleChoice"
                android:divider="@color/activity_split"
                android:dividerHeight="@dimen/dimen_0.5"
                android:padding="@dimen/dimen_0.5"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>

