<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="49dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/customview_cs_item_iv"
            android:layout_width="44dp"
            android:layout_height="48dp"
            android:adjustViewBounds="true"
            android:paddingBottom="14dp"
            android:paddingLeft="14dp"
            android:paddingRight="10dp"
            android:paddingTop="14dp"
            android:scaleType="centerInside"
            android:src="@drawable/customview_cs_ischeck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="14dp"
            android:paddingRight="14dp"
            android:paddingTop="14dp">

            <TextView
                android:id="@+id/customview_cs_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="分分类分类分类分类类"
                android:textColor="#333333"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/customview_cs_rv_title_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:paddingRight="5dp"
                android:src="@drawable/customview_cs_right_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="14dp"
            android:background="#e6e6e6" />
    </LinearLayout>
    <include layout="@layout/common_include_line_in_space"/>
</LinearLayout>