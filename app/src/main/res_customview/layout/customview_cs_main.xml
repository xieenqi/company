<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/customview_cs_rv_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e6e6e6" />

    <com.loyo.oa.v2.customview.classify_seletor.SlideContainer
        android:id="@+id/customview_cs_sc_multi"
        android:layout_width="match_parent"
        android:layout_height="165dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingBottom="5dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="5dp">
        <Button
            android:id="@+id/customview_cs_main_reset"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_other_view"
            android:background="@drawable/selepro_shape"
            android:gravity="center"
            android:text="全部取消"
            android:textColor="@color/text33" />


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <Button
            android:id="@+id/customview_cs_main_ok"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_other_view"
            android:background="@drawable/selepro_shape"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/title_bg1" />

    </LinearLayout>
</LinearLayout>