<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/alpha"
        android:background="#000"
        android:alpha="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.library.module.widget.loading.LoadingLayout
        android:id="@+id/ll_layout"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_width="match_parent">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/customview_cs_rv_title"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:overScrollMode="never"
                android:scrollbars="none" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e6e6e6" />

            <com.loyo.oa.v2.customview.classify_seletor.SlideContainer
                android:id="@+id/customview_cs_sc_multi"
                android:layout_width="match_parent"
                android:layout_height="170dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e6e6e6" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:paddingBottom="5dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="5dp">

                <Button
                    android:id="@+id/customview_cs_main_reset"
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_other_view"
                    android:background="@drawable/selepro_shape"
                    android:gravity="center"
                    android:text="重置"
                    android:textColor="@color/text33" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/customview_cs_main_ok"
                    android:layout_width="@dimen/dimen_80"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_other_view"
                    android:background="@drawable/selepro_shape"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/title_bg1" />

            </LinearLayout>
        </LinearLayout>
    </com.library.module.widget.loading.LoadingLayout>
</FrameLayout>